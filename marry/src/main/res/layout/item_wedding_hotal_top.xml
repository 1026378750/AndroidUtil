<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/cb_slidePage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/tf4f4f4"
        android:minHeight="@dimen/dim340"
        app:canLoop="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gv_optionsite"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:padding="5dp"
        />
    <View style="@style/line_style" />
    <ImageView
        android:id="@+id/iv_goback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:background="@color/color_ffffff"
        android:src="@drawable/ic_hotel_guide" />

    <View style="@style/line_style" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gv_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:padding="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/color_ffffff"
        android:padding="10dp"
        android:text="最强人气酒店"
        android:textColor="@color/f4666d"
        android:textSize="13sp" />
    <View style="@style/line_style" />
</LinearLayout>