<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/service_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selectord"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="15sp"
            android:text="我的服务进度" />

        <View style="@style/line_style" />

        <LinearLayout
            android:id="@+id/ll_year"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim120"
            android:background="@drawable/selectord"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/year_1"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/year_2"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/year_3"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/year_4"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_year" />

            <ImageView
                android:id="@+id/month_1"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/month_2"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_month" />

            <ImageView
                android:id="@+id/day_1"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/day_2"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_day" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim120"
            android:layout_marginTop="@dimen/dim2"
            android:background="@drawable/selectord"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到店时间" />

            <ImageView
                android:id="@+id/hour_1"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim50"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/hour_2"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim50"
                android:src="@drawable/time_00" />

            <ImageView
                android:layout_width="@dimen/dim20"
                android:layout_height="@dimen/dim50"
                android:src="@drawable/icon_time" />

            <ImageView
                android:id="@+id/hour_3"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim50"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/hour_4"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim50"
                android:src="@drawable/time_00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim10"
            android:layout_marginTop="@dimen/dim30"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim100"
                android:gravity="center"
                android:text="@string/service_toast"
                android:textColor="@color/main_context_gray"
                android:textSize="@dimen/text_title_size" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim1"
                android:background="@color/order_radio_bg" />

            <TextView
                android:id="@+id/text_toast"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dim20"
                android:lineSpacingExtra="@dimen/odre_line_extra"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/order_context" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>