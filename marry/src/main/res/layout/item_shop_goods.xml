<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/default_iamge" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim23"
                android:textSize="@dimen/dim30" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="bottom|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_icon_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/tf4666b"
                    android:textSize="@dimen/dim30" />

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_icon_price"
                    android:text="11998"
                    android:textColor="@color/tf4666b"
                    android:textSize="@dimen/dim30" />

                <TextView
                    android:id="@+id/tv_marketprice"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim35"
                    android:layout_marginLeft="@dimen/dim10"
                    android:layout_toRightOf="@+id/tv_goods_price"
                    android:paddingTop="@dimen/dim5"
                    android:text="22998"
                    android:textSize="@dimen/dim25" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dim10"
                    android:layout_marginRight="@dimen/dim54"
                    android:text="收藏"
                    android:textSize="@dimen/dim25" />

                <TextView
                    android:id="@+id/tv_goods_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dim10"
                    android:layout_marginRight="@dimen/dim34"
                    android:textSize="@dimen/dim25" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line_style" />
</LinearLayout>