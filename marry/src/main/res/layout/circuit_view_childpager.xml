<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_photo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scaleType="centerCrop"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="300"
        fresco:viewAspectRatio="1.5" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dim20"
        android:paddingLeft="@dimen/dim20"
        android:paddingRight="@dimen/dim20">

        <ImageView
            android:id="@+id/iv_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dim26"
            android:src="@drawable/red_circuit_selected"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_circuit_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dim20"
            android:textColor="@color/black"
            android:textSize="14.0dip" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_circuit_des"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dim20"
        android:paddingLeft="@dimen/dim20"
        android:paddingRight="@dimen/dim20"
        android:textColor="@color/main_context_gray"
        android:textSize="13.0dip" />
</LinearLayout>