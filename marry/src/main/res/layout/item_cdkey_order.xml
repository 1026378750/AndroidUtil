<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffeeeeee"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim96"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_store_img"
            android:layout_width="@dimen/dim50"
            android:layout_height="@dimen/dim50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dim34" />

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dim34"
            android:layout_toRightOf="@+id/img_store_img"
            android:gravity="center"
            android:padding="@dimen/dim5"
            android:text="222"
            android:textSize="@dimen/dim30" />

        <TextView
            android:id="@+id/tv_vr_state"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dim34"
            android:layout_marginRight="@dimen/dim34"
            android:gravity="center_vertical"
            android:text="222"
            android:textSize="@dimen/dim30" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim50"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim34"
            android:text="订单编号：" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim180"
        android:layout_marginTop="@dimen/dim1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_goods_image"
            android:layout_width="@dimen/dim180"
            android:layout_height="@dimen/dim114"
            android:layout_marginLeft="@dimen/dim34"
            android:background="@drawable/icon_default_shop"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dim34"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim30"
                    android:lines="2"
                    android:paddingRight="@dimen/dim34"
                    android:text="套餐名称"
                    android:textSize="@dimen/dim25" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim30">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_ok_buy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dim34"
                        android:text="￥990.0"
                        android:textSize="@dimen/dim25" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim96"
        android:layout_marginTop="@dimen/dim1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dim34"
        android:text="dasdasdasd"
        android:textColor="#ffe74f54"
        android:visibility="gone" />
</LinearLayout>