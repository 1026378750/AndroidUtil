<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim210"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="@dimen/dim180"
            android:layout_height="@dimen/dim114"
            android:layout_marginLeft="@dimen/dim34"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dim20"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/dim40"
                android:gravity=""
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dim20"
                android:paddingRight="@dimen/dim10">

                <TextView
                    android:id="@+id/tv_icon_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/tf4666b"
                    android:textSize="@dimen/dim30" />

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_icon_price"
                    android:text="11998"
                    android:textColor="@color/tf4666b"
                    android:textSize="@dimen/dim30" />

                <TextView
                    android:id="@+id/tv_goods_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dim10"
                    android:layout_marginRight="@dimen/dim34"
                    android:textSize="@dimen/dim25" />

                <TextView
                    android:id="@+id/tv_dismiss"
                    android:layout_width="@dimen/dim40"
                    android:layout_height="@dimen/dim40"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dim34"
                    android:layout_marginTop="@dimen/dim5"
                    android:background="@drawable/icon_dismiss"
                    android:textSize="@dimen/dim30" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim100"
        android:layout_marginTop="@dimen/dim2"
        android:background="@color/white"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="@dimen/dim200"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim34"
                android:text="购买数量:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dim34"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_minus"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:background="@drawable/text_angle_gray"
                android:gravity="center"
                android:text="一"
                android:textColor="@color/grey_color1"
                android:textSize="@dimen/dim30" />

            <TextView
                android:id="@+id/tv_goods_number"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:background="@drawable/text_angle"
                android:gravity="center"
                android:singleLine="true"
                android:text="1"
                android:textColor="@color/grey_color1"
                android:textSize="@dimen/dim30" />

            <TextView
                android:id="@+id/btn_add"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:background="@drawable/text_angle_right"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/grey_color1"
                android:textSize="@dimen/dim30" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim100"
        android:layout_marginTop="@dimen/dim1"
        android:background="@color/white" />

    <TextView
        android:id="@+id/tv_now_pay"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim100"
        android:background="#ffe54d4f"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/dim35" />
</LinearLayout>