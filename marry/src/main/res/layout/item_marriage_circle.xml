<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <View
        android:id="@+id/spaceView"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@color/body_background"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim70"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="type"
        android:textColor="@color/te64b50"
        android:textSize="@dimen/dim24" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim90"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="title"
                android:textColor="@color/black"
                android:textSize="@dimen/dim32" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim90"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="content"
                android:textSize="@dimen/dim26" />
        </LinearLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/civ"
            android:layout_width="@dimen/dim50"
            android:layout_height="@dimen/dim50"
            android:src="@drawable/default_user"/>

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="author"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_laud"
            android:layout_width="wrap_content"
            android:layout_height="26.0dip"
            android:layout_marginRight="@dimen/dim20"
            android:drawableLeft="@drawable/laud"
            android:drawablePadding="@dimen/dim5"
            android:gravity="center_vertical"
            android:text="99"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="26.0dip"
            android:drawableLeft="@drawable/reply"
            android:drawablePadding="@dimen/dim5"
            android:gravity="center_vertical"
            android:text="99"
            android:textSize="8sp" />
    </LinearLayout>
    <View style="@style/line_style"
        android:layout_marginTop="10dp"
        />
</LinearLayout>