<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dim190"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dim190"
        android:layout_height="@dimen/dim190"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim50"
        android:gravity="center"
        android:maxLines="1"
        android:paddingTop="@dimen/dim10"
        android:text="￥3434"
        android:textColor="@color/te64b50"
        android:textSize="@dimen/dim22" />

    <TextView
        android:id="@+id/tv_primary_price"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim30"
        android:gravity="center"
        android:maxLines="1"
        android:text="￥3434"
        android:textSize="@dimen/dim22" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim30" />
</LinearLayout>