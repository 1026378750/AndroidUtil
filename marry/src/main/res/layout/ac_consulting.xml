<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.zxin.zxinlib.view.CommonCrosswiseBar
        android:id="@+id/ccb_marray_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/main_title_background"
        app:isTopBar="true"
        app:left_button_image="@drawable/icon_back"
        app:left_button_size="20px"
        app:show_left_button="true"
        app:title_text="预约咨询"
        app:title_textColor="@color/color_ffffff"
        app:title_textSize="@dimen/size_18px" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffeeeeee"
        android:orientation="vertical">

        <com.liyuan.marrysecretary.common.ActionBarView
            android:id="@+id/actionBarRoot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim96"
            android:background="@color/white">

            <TextView
                android:layout_width="@dimen/dim200"
                android:layout_height="fill_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dim34"
                android:text="姓      名:" />

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dim20"
                android:layout_marginLeft="@dimen/dim34"
                android:layout_marginRight="@dimen/dim34"
                android:layout_marginTop="@dimen/dim20"
                android:background="@drawable/edittext_shape"
                android:drawablePadding="@dimen/dim10"
                android:gravity="top"
                android:hint="请输入您的姓名"
                android:maxLength="30"
                android:maxLines="1"
                android:padding="@dimen/dim10"
                android:paddingRight="@dimen/dim34"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/dim25" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim96"
            android:background="@color/white">

            <TextView
                android:layout_width="@dimen/dim200"
                android:layout_height="fill_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dim34"
                android:text="手机号码:" />

            <TextView
                android:id="@+id/ed_phone_number"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dim20"
                android:layout_marginLeft="@dimen/dim34"
                android:layout_marginRight="@dimen/dim34"
                android:layout_marginTop="@dimen/dim20"
                android:background="@drawable/edittext_shape"
                android:drawablePadding="@dimen/dim10"
                android:gravity="top"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:maxLength="30"
                android:maxLines="1"
                android:padding="@dimen/dim10"
                android:paddingRight="@dimen/dim34"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/dim25" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim96"
            android:background="@color/white">

            <TextView
                android:layout_width="@dimen/dim200"
                android:layout_height="fill_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dim34"
                android:text="微信号码:" />

            <EditText
                android:id="@+id/ed_weixin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dim20"
                android:layout_marginLeft="@dimen/dim34"
                android:layout_marginRight="@dimen/dim34"
                android:layout_marginTop="@dimen/dim20"
                android:background="@drawable/edittext_shape"
                android:drawablePadding="@dimen/dim10"
                android:gravity="top"
                android:hint="请输入微信号码"
                android:maxLength="30"
                android:maxLines="1"
                android:padding="@dimen/dim10"
                android:paddingRight="@dimen/dim34"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/dim25" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_submit_message"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim100"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:layout_width="@dimen/dim655"
            android:layout_height="@dimen/dim70"
            android:background="@drawable/select_relogin"
            android:gravity="center"
            android:text="提交信息"
            android:textColor="@color/white"
            android:textSize="@dimen/dim30" />
    </LinearLayout>
</LinearLayout>