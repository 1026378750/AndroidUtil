<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.zxin.zxinlib.view.CommonCrosswiseBar
        android:id="@+id/ccb_marray_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/main_title_background"
        app:isTopBar="true"
        app:left_button_image="@drawable/icon_back"
        app:left_button_size="20px"
        app:show_left_button="true"
        app:title_text="兑换券"
        app:title_textColor="@color/color_ffffff"
        app:title_textSize="@dimen/size_18px" />

    <RelativeLayout
        android:id="@+id/rl_order_stroe"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim96"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_store_img"
            android:layout_width="@dimen/dim50"
            android:layout_height="@dimen/dim50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dim34" />

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dim34"
            android:layout_toRightOf="@+id/img_store_img"
            android:drawablePadding="@dimen/dim10"
            android:drawableRight="@drawable/icon_next"
            android:gravity="center"
            android:padding="@dimen/dim5"
            android:text=""
            android:textSize="@dimen/dim30" />

        <TextView
            android:id="@+id/tv_vr_state"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dim34"
            android:layout_marginRight="@dimen/dim34"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="@dimen/dim30" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim180"
        android:layout_marginTop="@dimen/dim1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_goods_image"
            android:layout_width="@dimen/dim180"
            android:layout_height="@dimen/dim114"
            android:layout_marginLeft="@dimen/dim34"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dim34"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim30"
                android:layout_weight="1.0"
                android:lines="1"
                android:paddingRight="@dimen/dim34"
                android:text=""
                android:textSize="@dimen/dim25" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim20"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dim34"
                    android:text="有效期至："
                    android:textSize="@dimen/dim25" />

                <TextView
                    android:id="@+id/tv_vr_indate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dim34"
                    android:text=""
                    android:textSize="@dimen/dim25" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/detail_item_theme">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/cdk"
            android:textColor="@color/t727272"
            android:textSize="@dimen/dim20" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已使用"
            android:textColor="@color/t727272"
            android:textSize="@dimen/dim20" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:layout_marginLeft="@dimen/dim30"
        android:layout_marginRight="@dimen/dim30"
        android:background="@color/te5e5e5" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim100"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dim30"
        android:paddingRight="@dimen/dim30">

        <TextView
            android:id="@+id/tv_cdk"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="DS1239123192731320"
            android:textColor="@color/t727272"
            android:textSize="@dimen/dim25" />

        <TextView
            android:id="@+id/tv_tv_cdk_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2016-10-10"
            android:textColor="@color/t727272"
            android:textSize="@dimen/dim25" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim260"
        android:layout_marginTop="@dimen/dim1"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/qrcode_img"
            android:layout_width="@dimen/dim220"
            android:layout_height="@dimen/dim220" />
    </LinearLayout>
</LinearLayout>