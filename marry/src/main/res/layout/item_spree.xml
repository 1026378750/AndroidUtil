<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim180"
        android:layout_marginBottom="@dimen/dim10"
        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginRight="@dimen/dim20"
        android:layout_marginTop="@dimen/dim10"
        android:background="@drawable/ic_bag_bg"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim180"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gift_image"
                android:layout_width="@dimen/dim140"
                android:layout_height="@dimen/dim140"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dim34"
                android:scaleType="fitXY" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim180"
            android:layout_weight="1.0"
            android:paddingLeft="@dimen/dim20">

            <TextView
                android:id="@+id/store_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim25"
                android:textSize="@dimen/dim25" />

            <TextView
                android:id="@+id/gift_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#ffe64b50"
                android:textSize="@dimen/dim25" />

            <TextView
                android:id="@+id/create_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dim25"
                android:textSize="@dimen/dim25" />
        </RelativeLayout>

        <View
            android:id="@+id/state"
            android:layout_width="@dimen/dim70"
            android:layout_height="fill_parent"
            android:background="@drawable/ic_big_state1" />
    </LinearLayout>
</LinearLayout>