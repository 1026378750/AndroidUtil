<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.zxin.zxinlib.view.CommonCrosswiseBar
        android:id="@+id/ccb_marray_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/main_title_background"
        app:isTopBar="true"
        app:left_button_image="@drawable/icon_back"
        app:left_button_size="20px"
        app:show_left_button="true"
        app:title_text="喜帖"
        app:title_textColor="@color/color_ffffff"
        app:title_textSize="@dimen/size_18px"
        app:right_button_text="客户反馈"
        app:right_button_textSize="@dimen/size_13px"
        app:right_button_textColor="@color/color_ffffff"
        />

    <com.zxin.zxinlib.view.RefreshCommonView
        android:id="@+id/rcv_invitation_commonlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:bottonViewText="淡定,已经到底了~~~"
        app:noneImage="@drawable/icon_noinvitaion"
        app:noneText="@string/noinvitaion"
        app:paddingSize="5px"
        app:vessel_type="RecyclerView"
        app:isWaterfall="true"
        />

    <Button
        android:id="@+id/btn_create_invitation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="@dimen/dim20"
        android:layout_marginLeft="@dimen/dim34"
        android:layout_marginRight="@dimen/dim34"
        android:background="@drawable/btn_shape"
        android:gravity="center"
        android:text="@string/establishInvitation"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/size_14sp" />
</LinearLayout>