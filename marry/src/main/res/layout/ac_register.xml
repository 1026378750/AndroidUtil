<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ccb_marray_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/main_title_background"
        app:isTopBar="true"
        app:left_button_image="@drawable/icon_back"
        app:left_button_size="20px"
        app:show_left_button="true"
        app:title_text="用户注册"
        app:title_textColor="@color/color_ffffff"
        app:title_textSize="@dimen/size_18px" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:src="@drawable/login_logo"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <EditText
            android:id="@+id/et_register_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:drawableLeft="@drawable/icon_use"
            android:drawablePadding="10dp"
            android:hint="@string/phonenum"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/color_666666"
            android:textColorHint="@color/color_999999"
            android:textCursorDrawable="@null"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_register_verifycode"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_shape_red"
            android:text="@string/get_verification"
            android:textColor="@color/color_ffffff"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        style="@style/line_style"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/et_register_vercode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:drawableLeft="@drawable/icon_pwd"
        android:drawablePadding="10dp"
        android:hint="@string/verificationcode"
        android:inputType="number"
        android:maxLength="4"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/color_666666"
        android:textColorHint="@color/color_999999"
        android:textSize="13sp" />

    <View
        style="@style/line_style"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

    <EditText
        android:id="@+id/et_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:drawableLeft="@drawable/icon_pwd"
        android:drawablePadding="10dp"
        android:hint="@string/InputPassword"
        android:inputType="textPassword"
        android:maxLength="4"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/color_666666"
        android:textColorHint="@color/color_999999"
        android:textSize="13sp" />

    <View
        style="@style/line_style"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

    <EditText
        android:id="@+id/et_register_rePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:drawableLeft="@drawable/icon_pwd"
        android:drawablePadding="10dp"
        android:hint="@string/ReInputPassword"
        android:inputType="textPassword"
        android:maxLength="4"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/color_666666"
        android:textColorHint="@color/color_999999"
        android:textSize="13sp" />

    <View
        style="@style/line_style"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

    <Button
        android:id="@+id/btn_register_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/btn_shape_red"
        android:text="@string/login"
        android:textColor="@color/color_ffffff"
        android:textSize="14sp" />
</LinearLayout>