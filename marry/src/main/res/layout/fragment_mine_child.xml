<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:background="@drawable/icon_mybg">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/iv_user_head"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_defaultborder"
                android:padding="2dp"
                android:src="@drawable/default_user" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dim60"
                    android:layout_marginTop="@dimen/dim60"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_ffffff"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dim80"
                    android:layout_marginTop="@dimen/dim10"
                    android:gravity="top"
                    android:textColor="@color/color_ffffff"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#20000000"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_marry_coupon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dim35"
                    android:layout_height="@dimen/dim35"
                    android:background="@drawable/icon_cdkey"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim35" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim17"
                    android:text="优惠券"
                    android:textColor="@color/white" />
            </LinearLayout>

            <View
                style="@style/line_ver_style"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <LinearLayout
                android:id="@+id/ll_cdkey_voucher"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dim35"
                    android:layout_height="@dimen/dim35"
                    android:background="@drawable/icon_coupon"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim35" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim17"
                    android:text="兑换券"
                    android:textColor="@color/white" />
            </LinearLayout>

            <View
                style="@style/line_ver_style"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <LinearLayout
                android:id="@+id/ll_spree"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dim35"
                    android:layout_height="@dimen/dim35"
                    android:background="@drawable/icon_spree"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim35" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim17"
                    android:text="大礼包"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.zxin.root.view.CommonCrosswiseBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim20"
        app:bar_background="@color/color_ffffff"
        app:left_button_image="@drawable/icon_myall_order"
        app:left_button_text="我的订单"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_15px"
        app:show_left_button="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim1"
        android:background="@color/color_ffffff"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/ll_consulting_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dim10"
            android:drawableTop="@drawable/consulting_order"
            android:gravity="center"
            android:padding="10dp"
            android:text="预约单" />

        <TextView
            android:id="@+id/ll_other_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dim10"
            android:drawableTop="@drawable/icon_pay_order"
            android:gravity="center"
            android:padding="10dp"
            android:text="支付单" />

        <TextView
            android:id="@+id/ll_cd_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dim10"
            android:drawableTop="@drawable/cdkey_order"
            android:gravity="center"
            android:padding="10dp"
            android:text="兑换单" />

    </LinearLayout>

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ll_myorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim20"
        app:bar_background="@color/color_ffffff"
        app:left_button_image="@drawable/icon_marry_order"
        app:left_button_text="@string/marry_order"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_15px"
        app:right_button_textColor="@color/red"
        app:right_button_textSize="12px"
        app:show_left_button="true"
        app:show_right_button="true" />

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ll_taobao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/color_ffffff"
        app:left_button_image="@drawable/marry_order"
        app:left_button_text="婚品订单"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_15px"
        app:right_button_textColor="@color/red"
        app:right_button_textSize="12px"
        app:show_left_button="true"
        app:show_right_button="true" />

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ll_shop_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/color_ffffff"
        app:left_button_image="@drawable/icon_shop_cart"
        app:left_button_text="购物车"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_15px"
        app:right_button_textColor="@color/red"
        app:right_button_textSize="12px"
        app:show_left_button="true"
        app:show_right_button="true" />

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ll_mine_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/color_ffffff"
        app:left_button_image="@drawable/mine_topic"
        app:left_button_text="我的话题"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_15px"
        app:right_button_textColor="@color/red"
        app:right_button_textSize="12px"
        app:show_left_button="true"
        app:show_right_button="true" />

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ll_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/color_ffffff"
        app:left_button_image="@drawable/icon_my_collection"
        app:left_button_text="我的收藏"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_15px"
        app:right_button_textColor="@color/red"
        app:right_button_textSize="12px"
        app:show_left_button="true"
        app:show_right_button="true" />

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/color_ffffff"
        app:left_button_image="@drawable/icon_address"
        app:left_button_text="收货地址"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_15px"
        app:right_button_textColor="@color/red"
        app:right_button_textSize="12px"
        app:show_left_button="true"
        app:show_right_button="true" />

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ll_aboutus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim20"
        app:bar_background="@color/color_ffffff"
        app:left_button_image="@drawable/icon_my"
        app:left_button_text="关于我们"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_15px"
        app:right_button_textColor="@color/red"
        app:right_button_textSize="12px"
        app:show_left_button="true"
        app:show_right_button="true" />

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ll_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/color_ffffff"
        app:left_button_image="@drawable/icon_seting"
        app:left_button_text="@string/setting"
        app:left_button_textColor="@color/color_333333"
        app:left_button_textSize="@dimen/size_15px"
        app:right_button_textColor="@color/red"
        app:right_button_textSize="12px"
        app:show_left_button="true"
        app:show_right_button="true" />
</LinearLayout>