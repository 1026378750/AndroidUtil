<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_department"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/information_image"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/circle_photo" />

                <RelativeLayout
                    android:id="@+id/rl_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8.0dip"
                    android:layout_toRightOf="@+id/information_image">

                    <TextView
                        android:id="@+id/tv_manager_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dim25" />

                    <TextView
                        android:id="@+id/tv_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_manager_name"
                        android:layout_marginTop="5.0dip"
                        android:textColor="@color/t727272"
                        android:textSize="@dimen/dim25" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="157.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/background_tu">

                    <RelativeLayout
                        android:id="@+id/rl_dep"
                        android:layout_width="85.0dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_section"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5.0dip"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/dim25" />

                        <TextView
                            android:id="@+id/tv_dep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_section"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5.0dip"
                            android:layout_marginTop="5.0dip"
                            android:text="服务经理"
                            android:textColor="@color/t727272"
                            android:textSize="@dimen/dim25" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/viewLine"
                        android:layout_width="1.0dip"
                        android:layout_height="47.5dip"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/rl_dep"
                        android:background="@color/white" />

                    <RelativeLayout
                        android:id="@+id/rl_call"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/viewLine"
                        android:background="@drawable/selectord1"
                        android:clickable="true">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:id="@+id/iv_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/call_he" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_1"
                                android:layout_marginTop="5.0dip"
                                android:text="联系TA"
                                android:textColor="@color/t727272"
                                android:textSize="@dimen/dim25" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <View style="@style/line_style" />

        <TextView
            android:id="@+id/service_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="15sp"
            android:text="我的服务进度" />

        <View style="@style/line_style" />

        <LinearLayout
            android:id="@+id/ll_year"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/year_1"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/year_2"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/year_3"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/year_4"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_year" />

            <ImageView
                android:id="@+id/month_1"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/month_2"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_month" />

            <ImageView
                android:id="@+id/day_1"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/day_2"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_day" />
        </LinearLayout>

        <View style="@style/line_style" />

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selectord"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到店时间" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂未安排" />

            <LinearLayout
                android:id="@+id/layout_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/time_1"
                    android:layout_width="@dimen/dim50"
                    android:layout_height="@dimen/dim50"
                    android:src="@drawable/time_00" />

                <ImageView
                    android:id="@+id/time_2"
                    android:layout_width="@dimen/dim50"
                    android:layout_height="@dimen/dim50"
                    android:src="@drawable/time_00" />

                <ImageView
                    android:layout_width="@dimen/dim20"
                    android:layout_height="@dimen/dim50"
                    android:src="@drawable/icon_time" />

                <ImageView
                    android:id="@+id/time_3"
                    android:layout_width="@dimen/dim50"
                    android:layout_height="@dimen/dim50"
                    android:src="@drawable/time_00" />

                <ImageView
                    android:id="@+id/time_4"
                    android:layout_width="@dimen/dim50"
                    android:layout_height="@dimen/dim50"
                    android:src="@drawable/time_00" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_onlinebooking"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim70"
            android:layout_marginBottom="@dimen/dim16"
            android:layout_marginLeft="@dimen/dim10"
            android:layout_marginRight="@dimen/dim10"
            android:layout_marginTop="@dimen/dim16"
            android:visibility="gone"
            android:background="@drawable/btn_shape">

            <TextView
                android:id="@+id/tv_onlinebooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/yuyueshijian"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/icon_onlinebooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dim10"
                android:layout_toLeftOf="@+id/tv_onlinebooking" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim16"
            android:layout_marginLeft="@dimen/dim10"
            android:layout_marginRight="@dimen/dim10"
            android:layout_marginTop="@dimen/dim16">

            <RelativeLayout
                android:id="@+id/rl_btn_reserve_date"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/dim66"
                android:layout_weight="1.0"
                android:visibility="gone"
                android:background="@drawable/button_while_bg">

                <Button
                    android:id="@+id/btn_reserve_date"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:drawablePadding="5.0dip"
                    android:text="在线选摄影师"
                    android:textColor="@color/tf4666b" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_btn_reserve_camera"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/dim66"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:visibility="gone"
                android:background="@drawable/button_while_bg">

                <Button
                    android:id="@+id/btn_reserve_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:drawablePadding="5.0dip"
                    android:text="拍摄攻略"
                    android:textColor="@color/tf4666b" />
            </RelativeLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/shootingTimeRecyclerView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white" />

        <View style="@style/line_style" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/service_toast"
            android:textColor="@color/main_context_gray"
            android:textSize="@dimen/text_title_size" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/order_radio_bg" />

        <TextView
            android:id="@+id/text_toast"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:padding="10dp"
            android:textColor="@color/color_333333" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>