<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl_department"
            android:layout_width="fill_parent"
            android:layout_height="80.0dip"
            android:layout_marginBottom="1dp"
            android:background="@color/color_ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/information_image"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_photo" />

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_manager_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dim25" />

                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_manager_name"
                    android:layout_marginTop="5.0dip"
                    android:textColor="@color/t727272"
                    android:textSize="@dimen/dim25" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="157.0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/background_tu">

                <RelativeLayout
                    android:id="@+id/rl_dep"
                    android:layout_width="85.0dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/tv_section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5.0dip"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/dim25" />

                    <TextView
                        android:id="@+id/tv_dep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_section"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginTop="5.0dip"
                        android:text="服务经理"
                        android:textColor="@color/t727272"
                        android:textSize="@dimen/dim25" />
                </RelativeLayout>

                <View
                    android:id="@+id/viewLine"
                    android:layout_width="1.0dip"
                    android:layout_height="47.5dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/rl_dep"
                    android:background="@color/white" />

                <RelativeLayout
                    android:id="@+id/rl_call"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_toRightOf="@+id/viewLine"
                    android:background="@drawable/selectord1"
                    android:clickable="true">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:id="@+id/iv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/call_he" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_1"
                            android:layout_marginTop="5.0dip"
                            android:text="联系TA"
                            android:textColor="@color/t727272"
                            android:textSize="@dimen/dim25" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/service_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selectord"
            android:gravity="center"
            android:padding="10dp"
            android:text="我的服务进度"
            android:textSize="15sp" />

        <View style="@style/line_style" />


        <LinearLayout
            android:id="@+id/ll_year"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim120"
            android:background="@drawable/selectord"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/year_1"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/year_2"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/year_3"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/year_4"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_year" />

            <ImageView
                android:id="@+id/month_1"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/month_2"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_month" />

            <ImageView
                android:id="@+id/day_1"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/day_2"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_00" />

            <ImageView
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim70"
                android:src="@drawable/time_day" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim120"
            android:layout_marginTop="@dimen/dim2"
            android:background="@drawable/selectord"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到店时间" />

            <ImageView
                android:id="@+id/hour_1"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim50"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/hour_2"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim50"
                android:src="@drawable/time_00" />

            <ImageView
                android:layout_width="@dimen/dim20"
                android:layout_height="@dimen/dim50"
                android:src="@drawable/icon_time" />

            <ImageView
                android:id="@+id/hour_3"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim50"
                android:src="@drawable/time_00" />

            <ImageView
                android:id="@+id/hour_4"
                android:layout_width="@dimen/dim50"
                android:layout_height="@dimen/dim50"
                android:src="@drawable/time_00" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/service_toast"
            android:background="@color/color_ffffff"
            android:textColor="@color/color_666666"
            android:textSize="15sp" />

        <View
            style="@style/line_red_style" />

        <TextView
            android:id="@+id/text_toast"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/color_ffffff"
            android:lineSpacingExtra="2dp"
            android:lineSpacingMultiplier="1.2"
            android:textSize="12sp"
            android:textColor="@color/color_666666" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>