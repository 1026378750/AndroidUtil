<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/color_ffffff"
        android:padding="10dp">

        <ImageView
            android:id="@+id/store_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/default_iamge"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5.0dip"
                android:gravity="left"
                android:minLines="2"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="EN定制"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_shop_level"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim30"
                    android:scaleType="fitStart"
                    android:src="@drawable/icon_masonry_buiness"
                    />

                <TextView
                    android:id="@+id/tv_store_baozh"
                    android:layout_width="@dimen/dim30"
                    android:layout_height="@dimen/dim30"
                    android:layout_marginLeft="@dimen/dim5"
                    android:background="@drawable/btn_shape_bao"
                    android:gravity="center"
                    android:text="保"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim20" />

                <TextView
                    android:id="@+id/tv_store_baozhopen"
                    android:layout_width="@dimen/dim30"
                    android:layout_height="@dimen/dim30"
                    android:layout_marginLeft="@dimen/dim5"
                    android:background="@drawable/shop_baojin"
                    android:gravity="center"
                    android:text="￥"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim20" />

                <TextView
                    android:id="@+id/tv_store_zhping"
                    android:layout_width="@dimen/dim30"
                    android:layout_height="@dimen/dim30"
                    android:layout_marginLeft="@dimen/dim5"
                    android:background="@drawable/btn_shape_nuo"
                    android:gravity="center"
                    android:text="正"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim20" />

                <TextView
                    android:id="@+id/tv_store_shiti"
                    android:layout_width="@dimen/dim30"
                    android:layout_height="@dimen/dim30"
                    android:layout_marginLeft="@dimen/dim5"
                    android:background="@drawable/shape_shi"
                    android:gravity="center"
                    android:text="实"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim20" />

                <TextView
                    android:id="@+id/tv_store_qtian"
                    android:layout_width="@dimen/dim30"
                    android:layout_height="@dimen/dim30"
                    android:layout_marginLeft="@dimen/dim5"
                    android:background="@drawable/shape_7"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim20" />

                <TextView
                    android:id="@+id/tv_store_tuihuo"
                    android:layout_width="@dimen/dim30"
                    android:layout_height="@dimen/dim30"
                    android:layout_marginLeft="@dimen/dim5"
                    android:background="@drawable/btn_shape_tui"
                    android:gravity="center"
                    android:text="退"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim20" />

                <TextView
                    android:id="@+id/tv_store_shiyong"
                    android:layout_width="@dimen/dim30"
                    android:layout_height="@dimen/dim30"
                    android:layout_marginLeft="@dimen/dim5"
                    android:background="@drawable/shape_shiyong"
                    android:gravity="center"
                    android:text="试"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim20" />

                <TextView
                    android:id="@+id/tv_store_erxiaoshi"
                    android:layout_width="@dimen/dim30"
                    android:layout_height="@dimen/dim30"
                    android:layout_marginLeft="@dimen/dim5"
                    android:background="@drawable/shape_2h"
                    android:gravity="center"
                    android:text="商"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim20" />

                <TextView
                    android:id="@+id/tv_store_huodaofk"
                    android:layout_width="@dimen/dim30"
                    android:layout_height="@dimen/dim30"
                    android:layout_marginLeft="@dimen/dim5"
                    android:background="@drawable/shape_huo"
                    android:gravity="center"
                    android:text="货"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim20" />

                <TextView
                    android:id="@+id/tv_store_xiaoxie"
                    android:layout_width="@dimen/dim30"
                    android:layout_height="@dimen/dim30"
                    android:layout_marginLeft="@dimen/dim5"
                    android:background="@drawable/btn_shop_xiao"
                    android:gravity="center"
                    android:text="消"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/t727272"
                    tools:text="一"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_store_case"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/t727272"
                    tools:text="二"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_store_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/t727272"
                    tools:text="三"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_gift"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/color_ffffff"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"/>
</LinearLayout>