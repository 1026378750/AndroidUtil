<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ccb_marray_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/main_title_background"
        app:isTopBar="true"
        app:left_button_image="@drawable/icon_back"
        app:left_button_size="20px"
        app:show_left_button="true"
        app:title_text="会员特权"
        app:title_textColor="@color/color_ffffff"
        app:title_textSize="@dimen/size_18px" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_describe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="@dimen/dim50"
                android:paddingBottom="@dimen/dim10"
                android:paddingLeft="@dimen/dim34"
                android:paddingRight="@dimen/dim34"
                android:paddingTop="@dimen/dim10" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim96"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dim34"
                android:paddingRight="@dimen/dim34"
                android:text="留下您的联系方式以便商家尽快联系您" />

            <RelativeLayout
                android:id="@+id/rl_calendar"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim96"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dim34"
                    android:drawablePadding="@dimen/dim20"
                    android:gravity="center_vertical"
                    android:text="档期日期" />

                <TextView
                    android:id="@+id/tv_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dim34"
                    android:drawableRight="@drawable/icon_next"
                    android:gravity="center|right"
                    android:hint="请选择"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:paddingRight="@dimen/dim34"
                    android:singleLine="true"
                    android:textColor="@color/t757575"
                    android:textSize="@dimen/dim25" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim96"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dim34"
                    android:drawablePadding="@dimen/dim20"
                    android:gravity="center_vertical"
                    android:text="姓       名" />

                <EditText
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dim34"
                    android:background="@null"
                    android:gravity="center|right"
                    android:hint="请输入姓名"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:paddingRight="@dimen/dim34"
                    android:singleLine="true"
                    android:textColor="@color/t757575"
                    android:textSize="@dimen/dim25">

                    <requestFocus />
                </EditText>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim96"
                android:layout_marginTop="@dimen/dim2"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dim34"
                    android:drawablePadding="@dimen/dim20"
                    android:gravity="center_vertical"
                    android:text="电话号码" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dim34"
                    android:background="@null"
                    android:gravity="center|right"
                    android:hint="请选输入"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:paddingRight="@dimen/dim34"
                    android:singleLine="true"
                    android:textColor="@color/t757575"
                    android:textSize="@dimen/dim25" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_wechat"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim96"
                android:layout_marginTop="@dimen/dim2"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dim34"
                    android:drawablePadding="@dimen/dim20"
                    android:gravity="center_vertical"
                    android:text="微       信" />

                <EditText
                    android:id="@+id/tv_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dim34"
                    android:background="@null"
                    android:gravity="center|right"
                    android:hint="请输入微信"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:paddingRight="@dimen/dim34"
                    android:singleLine="true"
                    android:textColor="@color/t757575"
                    android:textSize="@dimen/dim25" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim90"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/main_bg"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="@dimen/dim655"
                    android:layout_height="@dimen/dim70"
                    android:background="@drawable/select_relogin"
                    android:gravity="center"
                    android:text="领取小秘书特别礼遇"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim30" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>