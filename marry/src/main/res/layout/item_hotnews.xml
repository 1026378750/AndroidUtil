<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/selector_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_single"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim210"
        android:layout_marginLeft="@dimen/dim30"
        android:layout_marginRight="@dimen/dim30"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dim30"
        android:paddingTop="@dimen/dim30">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/dim20"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dim3"
                android:lineSpacingMultiplier="1.3"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/dim25" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim50"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_recommendeds"
                        android:layout_width="@dimen/dim70"
                        android:layout_height="@dimen/dim35"
                        android:layout_marginRight="@dimen/dim20"
                        android:background="@drawable/text_red_border"
                        android:gravity="center"
                        android:text="推荐"
                        android:textColor="@color/tf4666b"
                        android:textSize="@dimen/dim25"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_storlogo"
                        android:layout_width="@dimen/dim35"
                        android:layout_height="@dimen/dim35"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/tv_shopname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/t727272"
                        android:textSize="@dimen/dim20" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_hot_praise" />

                    <TextView
                        android:id="@+id/tv_praisecount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim5"
                        android:text="20"
                        android:textColor="@color/t727272"
                        android:textSize="@dimen/dim20" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim20"
                        android:src="@drawable/ic_hot_comment" />

                    <TextView
                        android:id="@+id/tv_commentcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim5"
                        android:text="20"
                        android:textColor="@color/t727272"
                        android:textSize="@dimen/dim20" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dim185"
            android:layout_height="@dimen/dim140"
            android:background="@color/tf4f4f4"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_multiple"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim30"
        android:layout_marginRight="@dimen/dim30"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dim30"
        android:paddingTop="@dimen/dim30">

        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim50"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dim3"
            android:lineSpacingMultiplier="1.5"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/dim25" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim162"
            android:layout_marginTop="@dimen/dim20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_example1"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@color/tf4f4f4"
                android:scaleType="fitXY" />

            <View
                android:layout_width="@dimen/dim10"
                android:layout_height="fill_parent" />

            <ImageView
                android:id="@+id/iv_example2"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@color/tf4f4f4"
                android:scaleType="fitXY" />

            <View
                android:layout_width="@dimen/dim10"
                android:layout_height="fill_parent" />

            <ImageView
                android:id="@+id/iv_example3"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@color/tf4f4f4"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_recommendeds1"
                    android:layout_width="@dimen/dim70"
                    android:layout_height="@dimen/dim35"
                    android:layout_marginRight="@dimen/dim20"
                    android:background="@drawable/text_red_border"
                    android:gravity="center"
                    android:text="推荐"
                    android:textColor="@color/tf4666b"
                    android:textSize="@dimen/dim25"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_storlogo2"
                    android:layout_width="@dimen/dim35"
                    android:layout_height="@dimen/dim35"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_shopname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/t727272"
                    android:textSize="@dimen/dim20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_hot_praise" />

                <TextView
                    android:id="@+id/tv_praisecount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim5"
                    android:text="20"
                    android:textColor="@color/t727272"
                    android:textSize="@dimen/dim20" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim20"
                    android:src="@drawable/ic_hot_comment" />

                <TextView
                    android:id="@+id/tv_commentcount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim5"
                    android:text="20"
                    android:textColor="@color/t727272"
                    android:textSize="@dimen/dim20" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/item_line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim3"
            android:layout_marginLeft="@dimen/dim30"
            android:layout_marginRight="@dimen/dim30"
            android:background="@color/tf4f4f4" />

        <View
            android:id="@+id/type_line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim20"
            android:background="@color/tf4f4f4" />
    </RelativeLayout>
</LinearLayout>