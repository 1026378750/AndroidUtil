<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dim60</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:maxHeight">@dimen/dim60</item>
        <item name="android:progressDrawable">@drawable/rating_drawable_selector</item>
        <item name="android:minHeight">@dimen/dim60</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">1.0</item>
        <item name="android:stepSize">1.0</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="ShopCommentRatingBar" parent="@android:style/Widget.RatingBar">
