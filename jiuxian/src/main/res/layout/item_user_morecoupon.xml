<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/usercoupon_item_background"
    android:layout_width="fill_parent"
    android:layout_height="110.0dip"
    android:background="@drawable/bg_coupon_more"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="22.0">

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="6.0">

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/money_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="Â¥"
                android:textColor="@color/coupon_blue_light"
                android:textSize="18.0dip" />

            <TextView
                android:id="@+id/usercoupon_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:text="100"
                android:textColor="@color/coupon_blue_light"
                android:textSize="35.0dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/usercoupon_item_scope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_price"
            android:layout_centerHorizontal="true"
            android:text="@string/user_coupon_item_type_all"
            android:textColor="@color/textview_gray"
            android:textSize="11.0dip" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="13.0"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="15.0dip"
        android:paddingLeft="15.0dip"
        android:paddingTop="15.0dip">

        <TextView
            android:id="@+id/usercoupon_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:background="@drawable/corners_mycoupon_blue_bg"
            android:paddingBottom="1.0dip"
            android:paddingLeft="3.0dip"
            android:paddingRight="3.0dip"
            android:paddingTop="1.0dip"
            android:text="@string/coupon_choice_item_type_manjian"
            android:textColor="@android:color/white"
            android:textSize="9.0dip" />

        <TextView
            android:id="@+id/usercoupon_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3.0dip"
            android:maxLines="2"
            android:text="@string/beer_coupon_fill"
            android:textColor="@color/textview_black"
            android:textSize="13.0dip" />

        <TextView
            android:id="@+id/usercoupon_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|center|left"
            android:layout_marginTop="3.0dip"
            android:text="2015.08.17-2015.08.18"
            android:textColor="@color/textview_gray"
            android:textSize="11.0dip" />
    </RelativeLayout>
</LinearLayout>