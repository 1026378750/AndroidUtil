<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ccb_jiuxian_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/red_home_title"
        app:isTopBar="true"
        app:right_button_image="@drawable/icon_no_message_white"
        app:right_button_size="@dimen/size_20px"
        app:right_image="@drawable/icon_setting_white"
        app:show_right_button="true"
        app:show_right_image="true"
        app:title_text="我的"
        app:title_textColor="@color/color_ffffff"
        app:title_textSize="@dimen/size_18px" />

    <com.zxin.root.view.RefreshCommonView
        android:id="@+id/rcv_jiuxian_mine"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:bottonViewText="我是有底线的~~~"
        app:content_bgColor="@color/background_color"
        app:contentResource="@layout/fragment_mine_jiuxianchild"
        app:noneText="暂无商品数据~"
        app:orientation="vertical"
        app:vessel_type="ScrollView" />
</LinearLayout>