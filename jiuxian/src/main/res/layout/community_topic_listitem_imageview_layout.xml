<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/community_topic_listitem_big_imageview"
        android:layout_width="fill_parent"
        android:layout_height="254.0dip"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/community_topic_listitem_img_layout"
        android:layout_width="fill_parent"
        android:layout_height="169.0dip"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/community_topic_listitem_mid_imageview"
            android:layout_width="226.0dip"
            android:layout_height="169.0dip"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/community_topic_listitem_small_imageview_top"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/community_topic_listitem_small_imageview_bottom"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginTop="4.0dip"
                android:layout_weight="1.0"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>