<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/jiuxian_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="8.0dip"
        android:gravity="center"
        android:paddingLeft="42.0dip"
        android:paddingRight="42.0dip"
        android:paddingTop="30.0dip"
        android:text="@string/jiuxian_dialog_title"
        android:textColor="@color/gray_33"
        android:textSize="18.0dip"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/message_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10.0dip"
        android:paddingLeft="22.0dip"
        android:paddingRight="22.0dip"
        android:paddingTop="18.0dip"
        android:visibility="gone">

        <TextView
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="message"
            android:textColor="@color/gray_88"
            android:textSize="16.0dip" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginBottom="10.0dip"
        android:layout_weight="1.0"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/comm_bg_line"
        android:dividerHeight="1.0px"
        android:listSelector="@color/transparent"
        android:paddingTop="14.0dip"
        android:scrollbars="none"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/edit_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/edit_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="22.0dip"
            android:background="@android:color/white"
            android:drawableRight="@drawable/icon_clear"
            android:gravity="center_vertical"
            android:imeOptions="actionNext"
            android:textColor="@color/textview_gray"
            android:textColorHint="@color/gray_d9"
            android:textSize="18.0dip" />

        <View
            style="@style/text_divider_normal"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="30.0dip" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/check_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="14.0dip"
        android:button="@null"
        android:drawableLeft="@drawable/selector_noremind_checkbox"
        android:drawablePadding="4.0dip"
        android:text="@string/jiuxian_no_remind"
        android:textColor="@color/gray_88"
        android:textSize="14.0dip"
        android:visibility="gone" />

    <View
        android:id="@+id/line_view"
        style="@style/text_divider_normal"
        android:layout_marginTop="20.0dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <TextView
            android:id="@+id/left_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_custom_dialog_red_rtl"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="17.0dip" />

        <TextView
            android:id="@+id/right_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/gray_33"
            android:textSize="17.0dip" />
    </LinearLayout>
</LinearLayout>