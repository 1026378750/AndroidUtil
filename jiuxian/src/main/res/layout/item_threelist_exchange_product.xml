<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recommend_hot_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2.0dip"
        android:background="@color/white"
        android:drawablePadding="5.0dip"
        android:drawableTop="@drawable/icon_recommend_product_top"
        android:gravity="center_horizontal"
        android:paddingBottom="8.0dip"
        android:paddingTop="14.0dip"
        android:text="@string/recommend_hot_product"
        android:textColor="@color/black_25"
        android:textSize="14.0dip"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4.0dip"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_item_left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4.0dip"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:paddingLeft="20.0dip">

            <ImageView
                android:id="@+id/iv_proImg_left"
                android:layout_width="138.0dip"
                android:layout_height="138.0dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14.0dip"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/sellOutImgLeft"
                android:layout_width="100.0dip"
                android:layout_height="100.0dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14.0dip"
                android:scaleType="center"
                android:src="@drawable/icon_sell_out"
                android:visibility="gone" />

            <TextView
                android:id="@+id/name_left"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_proImg_left"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="10.0dip"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="2"
                android:maxLines="2"
                android:maxWidth="100.0dip"
                android:text="doi"
                android:textColor="@color/black_25"
                android:textSize="13.0sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_left"
                android:layout_marginBottom="10.0dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/price_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.0dip"
                        android:singleLine="true"
                        android:text="¥6874875894"
                        android:textColor="@color/red_fc"
                        android:textSize="13.0dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/jx_price_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/gray_99"
                        android:textSize="10.0dip" />
                </LinearLayout>

                <TextView
                    android:id="@+id/add_cart_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="10.0dip"
                    android:background="@drawable/selector_button_round_red"
                    android:gravity="center"
                    android:paddingBottom="5.0dip"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="8.0dip"
                    android:paddingTop="5.0dip"
                    android:text="@string/add_product_to_cart"
                    android:textColor="@color/white"
                    android:textSize="13.0dip" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_item_right"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:paddingLeft="20.0dip"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_proImg_right"
                android:layout_width="138.0dip"
                android:layout_height="138.0dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14.0dip"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/sellOutImgright"
                android:layout_width="100.0dip"
                android:layout_height="100.0dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14.0dip"
                android:scaleType="center"
                android:src="@drawable/icon_sell_out"
                android:visibility="gone" />

            <TextView
                android:id="@+id/name_right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_proImg_right"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="10.0dip"
                android:gravity="center_vertical"
                android:lines="2"
                android:maxLines="2"
                android:maxWidth="100.0dip"
                android:text="doi"
                android:textColor="@color/black_25"
                android:textSize="13.0sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_right"
                android:layout_marginBottom="10.0dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/price_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name_right"
                        android:layout_marginTop="8.0dip"
                        android:singleLine="true"
                        android:text="¥6874875894"
                        android:textColor="@color/red_fc"
                        android:textSize="13.0sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/jx_price_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/gray_99"
                        android:textSize="10.0sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/add_cart_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="10.0dip"
                    android:background="@drawable/selector_button_round_red"
                    android:gravity="center"
                    android:paddingBottom="5.0dip"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="8.0dip"
                    android:paddingTop="5.0dip"
                    android:text="@string/add_product_to_cart"
                    android:textColor="@color/white"
                    android:textSize="13.0dip" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>