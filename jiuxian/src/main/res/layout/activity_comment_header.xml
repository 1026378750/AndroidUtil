<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/comm_ui_bg"
    android:orientation="vertical"
    android:paddingBottom="10.0dip">

    <FrameLayout
        android:id="@+id/banner_info"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/banner_content"
            android:layout_width="fill_parent"
            android:layout_height="154.0dip" />

        <LinearLayout
            android:id="@+id/banner_page_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="75.0dip"
            android:layout_marginRight="12.0dip"
            android:orientation="horizontal" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/comment_center_header_info"
        android:layout_width="fill_parent"
        android:layout_height="42.0dip"
        android:layout_gravity="bottom"
        android:background="@color/comment_center_38"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="16.0dip"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/comment_center_img"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:src="@drawable/user_head" />

            <TextView
                android:id="@+id/comment_center_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="16.0dip"
                android:gravity="center|left"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="14.0dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center|right"
            android:orientation="horizontal"
            android:paddingRight="12.0dip">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20.0dip"
                android:layout_height="wrap_content"
                android:src="@drawable/comment_center_gold" />

            <TextView
                android:id="@+id/comment_center_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="40.0dip"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="16.0dip" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>