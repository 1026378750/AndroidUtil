<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/icon_hint"
        android:drawablePadding="5.0dip"
        android:gravity="center"
        android:paddingTop="21.0dip"
        android:text="@string/accounts_safety_verification"
        android:textColor="@color/red_fc"
        android:textSize="15.0dip"
        android:visibility="gone" />

    <TextView
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="18.0dip"
        android:paddingLeft="42.0dip"
        android:paddingRight="42.0dip"
        android:paddingTop="18.0dip"
        android:text="title"
        android:textColor="@color/black_25"
        android:textSize="14.0dip" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/comm_bg_line" />

    <EditText
        android:id="@+id/input"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:background="@null"
        android:gravity="center|left"
        android:inputType="textPassword"
        android:paddingLeft="24.0dip"
        android:paddingRight="24.0dip"
        android:singleLine="true"
        android:textColor="@color/black_25"
        android:textColorHint="@color/gray_ec"
        android:textSize="14.0dip"
        android:visibility="visible" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/comm_bg_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip">

        <TextView
            android:id="@+id/left_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/gray_66"
            android:textSize="14.0dip" />

        <ImageView
            android:id="@+id/button_line"
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:background="@color/comm_bg_line" />

        <TextView
            android:id="@+id/right_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/red_fc"
            android:textSize="14.0dip" />
    </LinearLayout>
</LinearLayout>