<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250.0dip"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corn"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="10.0dip"
            android:gravity="center"
            android:text="@string/prompt"
            android:textColor="@color/textview_black"
            android:textSize="14.0dip" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/text"
            android:layout_marginRight="20.0dip"
            android:src="@drawable/icon_order_commit_fail_close"
            android:visibility="gone" />
    </RelativeLayout>

    <View style="@style/text_divider_normal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:minHeight="40.0dip"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/piccode_title"
            android:layout_width="0.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="left"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:hint="@string/picturecode_hind"
            android:textColor="@color/textview_black"
            android:textColorHint="@color/gray_d9"
            android:textSize="12.0dip" />

        <ImageView
            android:id="@+id/piccode_showCode"
            android:layout_width="55.0dip"
            android:layout_height="35.0dip"
            android:layout_gravity="center"
            android:layout_marginLeft="10.0dip" />

        <TextView
            android:id="@+id/changepic"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="换一张"
            android:textColor="@color/gray_99"
            android:textSize="12.0dip" />
    </LinearLayout>

    <View style="@style/text_divider_normal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:orientation="horizontal"
        android:weightSum="2.0">

        <TextView
            android:id="@+id/btn_cancle"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/mydialog_cancle"
            android:textColor="@color/gray_66"
            android:textSize="14.0dip" />

        <View
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:background="@color/comm_bg_line" />

        <TextView
            android:id="@+id/piccode_ok"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/piccode_ok"
            android:textColor="@color/selector_register_com_text"
            android:textSize="14.0dip" />
    </LinearLayout>
</LinearLayout>