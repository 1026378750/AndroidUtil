<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="136.0dip"
    android:gravity="center_vertical"
    android:minHeight="136.0dip"
    android:orientation="horizontal"
    android:paddingBottom="12.0dip"
    android:paddingTop="12.0dip">

    <ImageView
        android:id="@+id/product_icon"
        android:layout_width="112.0dip"
        android:layout_height="112.0dip"
        android:layout_marginLeft="12.0dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10.0dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.0dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/gray_66"
            android:textSize="14.0dip" />

        <TextView
            android:id="@+id/product_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.0dip"
            android:layout_marginTop="4.0dip"
            android:singleLine="true"
            android:textColor="@color/gray_99"
            android:textSize="12.0dip" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12.0dip"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/red_fc"
                android:textSize="16.0dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_original_price"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.0dip"
                android:layout_weight="1.0"
                android:singleLine="true"
                android:textColor="@color/gray_99"
                android:textSize="11.0dip" />

       <!--     <com.jiuxian.client.widget.DrawableCenterTextView
                android:id="@+id/product_action"
                android:layout_width="68.0dip"
                android:layout_height="26.0dip"
                android:layout_marginLeft="12.0dip"
                android:gravity="center"
                android:text="action"
                android:textSize="13.0dip" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="4.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_time"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:singleLine="true"
                android:textColor="@color/blue_3a"
                android:textSize="11.0dip" />

            <TextView
                android:id="@+id/product_notice_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:singleLine="true"
                android:textColor="@color/blue_3a"
                android:textSize="11.0dip" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>