<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/time_layout_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone">

     <!--   <com.jiuxian.client.widget.IntervalLine
            android:id="@+id/top_line"
            android:layout_width="2.0dip"
            android:layout_height="18.0dip"
            android:layout_marginLeft="19.0dip" />
-->
        <LinearLayout
            android:id="@+id/time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/top_line"
            android:layout_marginLeft="14.0dip"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/time_axis_dot" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.0dip"
                android:text="时间"
                android:textColor="@color/gray_99"
                android:textSize="14.0dip" />
        </LinearLayout>

      <!--  <com.jiuxian.client.widget.IntervalLine
            android:id="@+id/bottom_line"
            android:layout_width="2.0dip"
            android:layout_height="4.0dip"
            android:layout_below="@+id/time_layout"
            android:layout_marginLeft="19.0dip" />-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

  <!--      <com.jiuxian.client.widget.IntervalLine
            android:layout_width="2.0dip"
            android:layout_height="fill_parent"
            android:layout_below="@+id/time_layout"
            android:layout_marginLeft="19.0dip" />-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7.0dip"
            android:layout_marginRight="14.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/bg_square_stroke_e8_bg_white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="31.0dip"
                android:gravity="center_vertical"
                android:paddingLeft="10.0dip"
                android:paddingRight="14.0dip"
                android:singleLine="true"
                android:text="title"
                android:textColor="@color/black_25"
                android:textSize="14.0sp" />

            <View style="@style/text_divider_normal" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="84.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10.0dip"
                android:paddingRight="14.0dip">

                <ImageView
                    android:id="@+id/iv_pic"
                    android:layout_width="54.0dip"
                    android:layout_height="54.0dip"
                    android:background="@color/white"
                    android:src="@drawable/icon_jiuxian_default" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="54.0dip"
                    android:layout_weight="1.0"
                    android:orientation="horizontal"
                    android:paddingLeft="15.0dip">

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:lines="3"
                        android:maxLines="3"
                        android:text="tv_desc"
                        android:textColor="@color/gray_66"
                        android:textSize="14.0sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:src="@drawable/logistics_ssistant_right_arrow_icon" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>