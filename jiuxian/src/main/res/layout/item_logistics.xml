<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="56.0dip"
    android:gravity="center_vertical"
    android:minHeight="56.0dip"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/jump_margin">

    <LinearLayout
        android:layout_width="12.0dip"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logistics_item_line_top"
            android:layout_width="1.0px"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:background="@color/comm_bg_line" />

        <ImageView
            android:id="@+id/logistics_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4.0dip"
            android:layout_marginTop="4.0dip"
            android:src="@drawable/icon_logistics_red" />

        <ImageView
            android:id="@+id/logistics_item_line_bottom"
            android:layout_width="1.0px"
            android:layout_height="0.0dip"
            android:layout_weight="2.8"
            android:background="@color/comm_bg_line" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14.0dip"
            android:layout_marginRight="24.0dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/logistics_item_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_fc"
                android:textSize="12.0dip" />

            <TextView
                android:id="@+id/logistics_item_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dip"
                android:textColor="@color/gray_99"
                android:textSize="10.0dip" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15.0dip"
            android:background="@color/comm_bg_line" />
    </FrameLayout>
</LinearLayout>