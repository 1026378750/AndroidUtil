<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_comment_success_banner" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="44.0dip">

        <TextView
            android:id="@+id/comment_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="8.0dip"
            android:drawableRight="@drawable/icon_jump_black"
            android:padding="4.0dip"
            android:text="@string/comment_successful_show"
            android:textColor="@color/black_25" />
    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"
        android:background="@color/comm_ui_bg" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_marginLeft="12.0dip"
        android:gravity="center_vertical"
        android:text="@string/comment_successful_other"
        android:textColor="@color/black_25"
        android:textSize="15.0dip" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/comm_bg_line" />
</LinearLayout>