<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="16.0dip"
        android:paddingTop="16.0dip">

        <ImageView
            android:id="@+id/img_wine_logo"
            android:layout_width="fill_parent"
            android:layout_height="174.0dip"
            android:layout_gravity="center"
            android:layout_marginLeft="52.0dip"
            android:layout_marginRight="52.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            style="@style/text_divider_normal"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/totle_wine_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:gravity="center_vertical"
            android:text="共搜索到以下0款相似酒"
            android:textColor="@color/textview_gray"
            android:textSize="12.0dip" />

        <View
            style="@style/text_divider_normal"
            android:layout_weight="1.0" />
    </LinearLayout>
</LinearLayout>