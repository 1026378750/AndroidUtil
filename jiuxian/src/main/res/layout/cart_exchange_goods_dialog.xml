<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="top"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="20.0dip"
            android:paddingTop="14.0dip"
            android:text="@string/cart_exchange_goods_title"
            android:textColor="@color/gray_99"
            android:textSize="15.0dip" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="4.0dip"
            android:layout_marginTop="4.0dip"
            android:padding="10.0dip"
            android:src="@drawable/icon_pay_close" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gridview"
        android:layout_width="fill_parent"
        android:layout_height="240.0dip"
        android:layout_gravity="top"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:background="@color/white"
        android:cacheColorHint="@color/transparent"
        android:horizontalSpacing="4.0dip"
        android:listSelector="@color/transparent"
        android:minHeight="240.0dip"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="10.0dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exchange_goods"
            android:layout_width="0.0dip"
            android:layout_height="48.0dip"
            android:layout_weight="5.0"
            android:background="@drawable/bg_bottom_column"
            android:gravity="center"
            android:minHeight="0.0dip"
            android:minWidth="0.0dip"
            android:text="@string/cart_exchange_goods"
            android:textColor="@color/gray_66"
            android:textSize="16.0dip" />

        <TextView
            android:id="@+id/sure"
            android:layout_width="0.0dip"
            android:layout_height="48.0dip"
            android:layout_weight="2.0"
            android:background="@drawable/selector_button_square_red_gray"
            android:gravity="center"
            android:minHeight="0.0dip"
            android:minWidth="0.0dip"
            android:text="@string/sure"
            android:textColor="@color/white"
            android:textSize="16.0dip" />
    </LinearLayout>
</LinearLayout>