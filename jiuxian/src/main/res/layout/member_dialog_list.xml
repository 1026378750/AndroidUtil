<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/jiuxian_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="8.0dip"
        android:gravity="center"
        android:paddingLeft="42.0dip"
        android:paddingRight="42.0dip"
        android:paddingTop="30.0dip"
        android:text="@string/jiuxian_dialog_title"
        android:textColor="@color/gray_33"
        android:textSize="18.0dip"
        android:visibility="visible" />

    <TextView
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:paddingLeft="24.0dip"
        android:paddingRight="24.0dip"
        android:paddingTop="18.0dip"
        android:text="message"
        android:textColor="@color/gray_88"
        android:textSize="16.0dip"
        android:visibility="gone" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/comm_bg_line"
        android:dividerHeight="1.0px"
        android:listSelector="@color/transparent"
        android:paddingTop="24.0dip"
        android:scrollbars="none"
        android:visibility="gone" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="30.0dip"
        android:background="@color/comm_bg_line_dd" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <TextView
            android:id="@+id/left_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/gray_33"
            android:textSize="17.0dip" />

        <TextView
            android:id="@+id/right_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_custom_dialog_red"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="17.0dip" />
    </LinearLayout>
</LinearLayout>