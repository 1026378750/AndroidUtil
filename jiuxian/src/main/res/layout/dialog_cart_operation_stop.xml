<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff3f5f6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/alert_icon"
            android:drawablePadding="10.0dip"
            android:maxLines="2"
            android:minHeight="46.0dip"
            android:paddingBottom="13.0dip"
            android:paddingLeft="21.0dip"
            android:paddingRight="21.0dip"
            android:paddingTop="13.0dip"
            android:text="@string/expenses_detail_title"
            android:textColor="@color/gray_66"
            android:textSize="13.0dip" />
    </LinearLayout>

    <ListView
        android:id="@+id/operationstoplist"
        android:layout_width="fill_parent"
        android:layout_height="196.0dip"
        android:layout_marginLeft="24.0dip"
        android:divider="@color/comm_bg_line"
        android:dividerHeight="1.0px"
        android:listSelector="@color/transparent"
        android:scrollbars="none" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/comm_bg_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="46.0dip"
        android:orientation="horizontal">

        <View
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="3.0" />

        <TextView
            android:id="@+id/sure"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2.0"
            android:background="@color/red_fc"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/product_service_detail_sure"
            android:textColor="@color/white"
            android:textSize="14.0dip" />
    </LinearLayout>
</LinearLayout>