<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jx="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/color_ffffff"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/ll_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_club_product_collect" />

            <TextView
                android:id="@+id/tv_collect_count"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="2"
                android:textColor="#fff23030"
                android:textSize="14dp"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/commodity_collect"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_browse"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_club_browse_footprint" />

            <TextView
                android:id="@+id/tv_browse_count"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="2"
                android:textColor="#fff23030"
                android:textSize="14dp"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/browse_history"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_club_member_channel" />

            <ImageView
                android:id="@+id/iv_channel"
                style="@style/message_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right|top"
                android:layout_marginTop="6dp"
                android:src="@drawable/icon_member_new"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/character_member_channle"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_exchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_club_product_exchange" />

            <TextView
                android:id="@+id/tv_exchange_count"
                style="@style/message_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right|top"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="8dp"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/commodity_exchange"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_13sp" />
    </LinearLayout>
</LinearLayout>