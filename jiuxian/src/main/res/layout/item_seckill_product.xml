<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="136.0dip"
    android:gravity="center_vertical"
    android:minHeight="136.0dip"
    android:orientation="horizontal"
    android:padding="12.0dip">

    <FrameLayout
        android:layout_width="112.0dip"
        android:layout_height="112.0dip">

        <ImageView
            android:id="@+id/product_icon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <ImageView
            android:id="@+id/product_paly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="30.0dip"
            android:src="@drawable/icon_play_list_big"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_stock"
            android:layout_width="fill_parent"
            android:layout_height="16.0dip"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_square_stroke_translucent"
            android:gravity="center"
            android:text="@string/seckill_item_stcok"
            android:textColor="@color/white"
            android:textSize="10.0dip"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10.0dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.0dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/gray_66"
            android:textSize="14.0dip" />

        <TextView
            android:id="@+id/product_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.0dip"
            android:layout_marginTop="4.0dip"
            android:singleLine="true"
            android:textColor="@color/gray_99"
            android:textSize="12.0dip" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/price_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="88.0dip"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/red_fc"
                    android:textSize="16.0dip"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_original_price"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4.0dip"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:textColor="@color/gray_99"
                    android:textSize="11.0dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Active_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price_info"
                android:layout_marginRight="90.0dip"
                android:layout_marginTop="4.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/progress_info"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:textColor="@color/red_fc"
                    android:textSize="11.0dip" />

                <!--<com.jiuxian.client.widget.AnimProgressbar
                    android:id="@+id/progressbar"
                    style="@style/progress_horizontal"
                    android:layout_width="64.0dip"
                    android:layout_height="6.0dip"
                    android:layout_marginLeft="4.0dip"
                    android:max="100" />-->
            </LinearLayout>

            <!--<com.jiuxian.client.widget.DrawableCenterTextView
                android:id="@+id/product_action"
                android:layout_width="68.0dip"
                android:layout_height="26.0dip"
                android:layout_alignBottom="@+id/Active_info"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="action"
                android:textSize="13.0dip" />-->
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>