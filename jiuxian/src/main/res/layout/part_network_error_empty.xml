<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/network_error_empty"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="gone">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100.0dip"
        android:src="@drawable/icon_network_error" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip"
        android:text="@string/network_error_titke"
        android:textColor="@color/gray_66"
        android:textSize="14.0dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.0dip"
        android:text="@string/check_phone_network"
        android:textColor="@color/gray_99"
        android:textSize="12.0dip" />

    <TextView
        android:id="@+id/network_error_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28.0dip"
        android:background="@drawable/icon_network_reload"
        android:gravity="center"
        android:paddingBottom="6.0dip"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingTop="6.0dip"
        android:text="@string/network_error_refresh"
        android:textColor="@color/gray_66"
        android:textSize="14.0dip" />
</LinearLayout>