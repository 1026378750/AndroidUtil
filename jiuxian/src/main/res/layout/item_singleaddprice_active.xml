<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120.0dip"
        android:minHeight="120.0dip"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="120.0dip"
            android:layout_height="120.0dip"
            android:layout_marginBottom="1.0dip">

            <ImageView
                android:id="@+id/item_man_icon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/item_man_stock"
                android:layout_width="fill_parent"
                android:layout_height="16.0dip"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_square_stroke_translucent"
                android:gravity="center"
                android:text="@string/cart_item_out_of_stock"
                android:textColor="@color/white"
                android:textSize="10.0dip"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.0dip"
            android:layout_marginRight="14.0dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_man_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14.0dip"
                android:lines="2"
                android:maxLines="2"
                android:textColor="@color/black_25"
                android:textSize="14.0dip" />

            <ImageView
                android:id="@+id/item_man_oneself"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10.0dip"
                android:gravity="center"
                android:src="@drawable/icon_jiuxian_own" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="14.0dip"
                android:layout_marginTop="12.0dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4.0dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_man_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14.0dip"
                        android:text="@string/trade_price"
                        android:textColor="@color/red_fc"
                        android:textSize="12.0dip" />

                    <TextView
                        android:id="@+id/item_man_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14.0dip"
                        android:textColor="@color/red_fc"
                        android:textSize="16.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4.0dip">

                    <TextView
                        android:id="@+id/item_man_jiuxianprice_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14.0dip"
                        android:gravity="center"
                        android:text="@string/jx_price"
                        android:textColor="@color/gray_99"
                        android:textSize="12.0dip" />

                    <TextView
                        android:id="@+id/item_man_jiuxianprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14.0dip"
                        android:gravity="center"
                        android:textColor="@color/gray_99"
                        android:textSize="12.0dip" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="134.0dip"
        android:background="@color/comm_bg_line" />
</LinearLayout>