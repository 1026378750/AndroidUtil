<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_root_layout"
            android:layout_width="fill_parent"
            android:layout_height="96.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/item_mine_coupon_left_layout"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/item_mine_coupon_left_manjian"
                android:paddingRight="14.0dip">

                <TextView
                    android:id="@+id/item_mine_coupon_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="100"
                    android:textColor="@color/white"
                    android:textSize="30.0dip"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_mine_coupon_price_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="12.0dip"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="满699元可用"
                    android:textColor="@color/white"
                    android:textSize="11.0dip" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_mine_coupon_right_layout"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="2.14"
                android:background="@drawable/item_mine_coupon_right"
                android:paddingLeft="10.0dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/item_mine_coupon_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="36.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_toLeftOf="@+id/item_mine_coupon_arrow"
                    android:maxLines="3"
                    android:text="限酒仙自营全品类满199元可用(限手机平台)"
                    android:textColor="@color/textview_gray"
                    android:textSize="12.0dip"
                    android:drawableTop="@drawable/item_mine_coupon_icon_manjian" />

                <TextView
                    android:id="@+id/item_mine_coupon_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="12.0dip"
                    android:layout_marginRight="36.0dip"
                    android:layout_toLeftOf="@+id/item_mine_coupon_arrow"
                    android:text="2017.04.12-2017.09.28"
                    android:textColor="@color/gray_99"
                    android:textSize="10.0dip" />

                <CheckBox
                    android:id="@+id/item_mine_coupon_checkbox"
                    style="@style/checkbox_no_pressed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13.0dip"
                    android:layout_marginRight="8.0dip"
                    android:clickable="false" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/item_coupon_notice"
            android:layout_width="fill_parent"
            android:layout_height="26.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/item_coupon_notice"
            android:gravity="center_vertical"
            android:paddingLeft="12.0dip"
            android:textColor="@color/gray_99"
            android:textSize="12.0dip"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>