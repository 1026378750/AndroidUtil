<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fadingEdge="none"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="42.0dip"
        android:background="@color/white"
        android:fadingEdge="none"
        android:gravity="center">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/comment_center_tab_list"
            android:layout_width="fill_parent"
            android:layout_height="42.0dip"
            android:background="@color/white" />

        <View
            style="@style/text_divider_normal"
            android:layout_marginTop="42.0dip" />
    </FrameLayout>

    <View style="@style/text_divider_normal" />

    <FrameLayout
        android:id="@+id/comment_center_empty"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/comm_ui_bg"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="58.0dip"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/empty_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comment_center_noinfo" />

            <TextView
                android:id="@+id/comment_empty_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.0dip"
                android:textColor="@color/gray_99"
                android:textSize="14.0dip" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>