<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mListContentRl"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_listview_normal"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/jump_margin"
        android:paddingRight="@dimen/jump_margin">

        <FrameLayout
            android:layout_width="90.0dip"
            android:layout_height="90.0dip">

            <ImageView
                android:id="@+id/mGoodsImg"
                android:layout_width="90.0dip"
                android:layout_height="90.0dip"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/text_whp"
                style="@style/text_understock_style"
                android:visibility="gone" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="122.0dip"
            android:layout_marginLeft="14.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingBottom="18.0dip"
            android:paddingTop="14.0dip">

            <TextView
                android:id="@+id/mGoodsNameTV"
                style="@style/textview_14"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:maxEms="17"
                android:maxLines="2"
                android:singleLine="false" />

            <TextView
                android:id="@+id/mGoodsAdvTv"
                style="@style/textview_12"
                android:layout_below="@+id/mGoodsNameTV"
                android:maxLines="1"
                android:textColor="@color/gray_66"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/mActiContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mGoodsNameTV"
                android:layout_marginTop="3.0dip"
                android:focusable="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textStoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_store_pro_list"
                    android:drawablePadding="5.0dip"
                    android:ellipsize="end"
                    android:paddingRight="5.0dip"
                    android:singleLine="true"
                    android:textColor="@color/gray_99"
                    android:textSize="12.0dip"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/mActiLL"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/mEvaContentLL"
                android:layout_marginBottom="3.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mGoodsPriceTV"
                    style="@style/textview_14"
                    android:maxLines="1"
                    android:textColor="@color/red_fc" />

                <LinearLayout
                    android:id="@+id/mPriceActiLL"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mEvaContentLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageJiuxianOwn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10.0dip"
                    android:src="@drawable/icon_jiuxian_own"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/mGoodsEvalu"
                    style="@style/textview_12"
                    android:maxLines="1"
                    android:paddingRight="16.0dip"
                    android:textColor="@color/gray_66" />

                <TextView
                    android:id="@+id/mGoodsCountTv"
                    style="@style/textview_12"
                    android:maxLines="1"
                    android:textColor="@color/gray_66" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/community_pro_list_item_checked"
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18.0dip"
            android:layout_marginRight="18.0dip"
            android:src="@drawable/community_pro_unselected" />
    </LinearLayout>

    <View style="@style/text_divider_normal" />
</LinearLayout>