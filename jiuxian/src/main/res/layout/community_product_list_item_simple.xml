<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mListContentRl"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_listview_normal"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="116.0dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mGoodsImg"
            android:layout_width="90.0dip"
            android:layout_height="90.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="14.0dip"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="116.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:paddingBottom="14.0dip"
                android:paddingTop="18.0dip">

                <TextView
                    android:id="@+id/mGoodsNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"
                    android:maxEms="17"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:textColor="@color/black_25"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/mGoodsPriceTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:maxLines="1"
                    android:textColor="@color/red_fc"
                    android:textSize="13.0sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/community_pro_list_item_checked"
                android:layout_width="18.0dip"
                android:layout_height="18.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="18.0dip"
                android:src="@drawable/community_pro_unselected" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/text_divider_normal" />
</LinearLayout>