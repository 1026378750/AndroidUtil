<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/translucent_30">

    <LinearLayout
        android:id="@+id/umeng_update_frame"
        style="@style/dialog_update_bg"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/update_title"
            android:textColor="@color/red_fc"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/update_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/gray_66"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/selector_button_round_white"
                android:gravity="center"
                android:text="@string/update_cancel"
                android:textColor="@color/gray_66"
                android:textSize="14dp" />

            <Button
                android:id="@+id/exit"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/selector_button_round_white"
                android:gravity="center"
                android:text="@string/update_exit"
                android:textColor="@color/gray_66"
                android:textSize="14dp"
                android:visibility="gone" />

            <View
                android:layout_width="15dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/download"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/selector_button_round_red"
                android:gravity="center"
                android:text="@string/update_download"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <Button
                android:id="@+id/install"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/selector_button_round_red"
                android:gravity="center"
                android:text="@string/update_install"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>