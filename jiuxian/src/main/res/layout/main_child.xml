<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/mian_child_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        app:layout_scrollFlags="scroll" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mian_child_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/mian_child_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mian_child_3_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mian_child_3_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/mian_child_3_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mian_child_3_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/mian_child_3_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/mian_child_3_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mian_child_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mian_child_4_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:scaleType="fitXY" />

        <com.zxin.root.view.banner.VerticalBannerView
            android:id="@+id/mian_child_4_2"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            app:vertical_duration="1000"
            app:vertical_gap="5000"
            app:vertical_item_num="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mian_child_5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mian_child_5_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_16sp"
            tools:text="标题" />

        <LinearLayout
            android:id="@+id/mian_child_5_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/mian_child_5_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/icon_miaopai_arrow"
            android:gravity="right"
            android:padding="10dp"
            android:text="@string/_mustbuytip"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_13sp" />
    </LinearLayout>

    <View style="@style/line_style" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mian_child_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/mian_child_7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"

        app:layout_scrollFlags="scroll" />

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/mian_child_8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"

        app:layout_scrollFlags="scroll" />

    <LinearLayout
        android:id="@+id/mian_child_9"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"

        android:background="@color/color_ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mian_child_9_1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/default_img_big" />

        <View style="@style/line_ver_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mian_child_9_2"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/default_img_big" />

            <View style="@style/line_style" />

            <ImageView
                android:id="@+id/mian_child_9_3"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/default_img_big" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mian_child_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff" />

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/mian_child_11"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"

        app:layout_scrollFlags="scroll" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/mian_child_12_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mian_child_12_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/default_img_big" />

            <View style="@style/line_ver_style" />

            <ImageView
                android:id="@+id/mian_child_12_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/default_img_big" />

        </LinearLayout>

        <View style="@style/line_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mian_child_12_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/default_img_big" />

            <View style="@style/line_ver_style" />

            <ImageView
                android:id="@+id/mian_child_12_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/default_img_big" />

            <View style="@style/line_ver_style" />

            <ImageView
                android:id="@+id/mian_child_12_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/default_img_big" />

        </LinearLayout>

        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/mian_child_13"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            app:layout_scrollFlags="scroll" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mian_child_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/mian_child_15"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        app:layout_scrollFlags="scroll" />

    <ImageView
        android:id="@+id/mian_child_16"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:scaleType="fitXY" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mian_child_16_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/ll_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/exchange_left_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/selector_product_tab"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/hot_recommend"
            android:textColor="@color/order_tab_item_selector"
            android:textSize="@dimen/size_15sp" />

        <RadioButton
            android:id="@+id/exchange_right_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/selector_product_tab"
            android:button="@null"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/guess_you_like"
            android:textColor="@color/order_tab_item_selector"
            android:textSize="@dimen/size_15sp" />
    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_home_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>