<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/community_person_center_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/community_experence_back"
            android:layout_width="wrap_content"
            android:layout_height="38.0dip"
            android:layout_gravity="center|left|top"
            android:contentDescription="@null"
            android:paddingLeft="10.0dip"
            android:paddingRight="20.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/icon_title_back_white" />

        <HorizontalScrollView
            android:id="@+id/experevce_scollview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:overScrollMode="never"
            android:scrollbars="none">

            <RelativeLayout
                android:id="@+id/community_experence_scroll_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="150.0dip"
                android:paddingRight="150.0dip">

                <include
                    android:id="@+id/reached_line_layout"
                    layout="@layout/community_personal_reached_line_layout"
                    android:layout_width="1355.0dip"
                    android:layout_height="60.0dip"
                    android:layout_marginLeft="50.0dip" />
            </RelativeLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="38.0dip"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/community_experence_record"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0.0dip"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawablePadding="10.0dip"
                android:gravity="center"
                android:text="@string/community_experence_record"
                android:textColor="@color/black_25"
                android:textSize="16.0sp" />

            <View
                android:layout_width="60.0dip"
                android:layout_height="2.0dip"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/community_experence_rule"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0.0dip"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawablePadding="10.0dip"
                android:gravity="center"
                android:text="@string/community_experence_rule"
                android:textColor="@color/gray_99"
                android:textSize="16.0sp" />

            <View
                android:layout_width="60.0dip"
                android:layout_height="2.0dip"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/black"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/text_divider_normal" />

    <FrameLayout
        android:id="@+id/community_experence_fragmentcontainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>