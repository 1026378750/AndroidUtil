<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_root_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mAddressItemLinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12.0dip"
        android:paddingLeft="5.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="12.0dip">

        <ImageView
            android:id="@+id/mImg"
            android:layout_width="76.0dip"
            android:layout_height="115.0dip"
            android:contentDescription="@null"
            android:gravity="center"
            android:padding="5.0dip"
            android:src="@drawable/icon_jiuxian_default"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/jkc_title_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mTvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="西班牙红酒克罗丽沙金干红葡萄酒750ml"
                    android:textColor="@color/gray_33"
                    android:textSize="14.0sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/mSubTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Spanish wine cloisa gold standard dry red wine red fd"
                    android:textColor="@color/gray_66"
                    android:textSize="12.0sp" />

                <TextView
                    android:id="@+id/jkc_sub_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:maxLines="2"
                    android:text="jfdksn |  fdskfkds | fsdfk  | fsdlkjfks"
                    android:textColor="@color/gray_99" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/jkc_price_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mPrice"
                    style="@style/textview_12"
                    android:text="酒仙价 "
                    android:textColor="@color/gray_66"
                    android:textSize="13.0dip" />

                <TextView
                    android:id="@+id/mJXPrice"
                    style="@style/textview_12"
                    android:gravity="center_vertical"
                    android:textColor="@color/red_fc"
                    android:textSize="14.0sp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1.0dip"
                    android:layout_weight="1.0" />

                <Button
                    android:id="@+id/jkc_go_wiki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_button_round_99_white"
                    android:contentDescription="@null"
                    android:gravity="right"
                    android:paddingBottom="5.0dip"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="8.0dip"
                    android:paddingTop="5.0dip"
                    android:text="看百科"
                    android:textColor="@color/gray_66"
                    android:textSize="12.0sp" />

                <Button
                    android:id="@+id/mBtnGoBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10.0dip"
                    android:background="@drawable/bg_button_round_red"
                    android:contentDescription="@null"
                    android:gravity="right"
                    android:paddingBottom="5.0dip"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="8.0dip"
                    android:paddingTop="5.0dip"
                    android:src="@drawable/bg_button_round_red"
                    android:text="去购买"
                    android:textColor="@color/white"
                    android:textSize="12.0sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottom_line"
        style="@style/text_divider_normal"
        android:layout_marginLeft="10.0dip" />
</LinearLayout>