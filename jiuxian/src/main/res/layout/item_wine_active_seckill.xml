<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="98.0dip"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="4.0dip"
    android:paddingLeft="7.0dip"
    android:paddingRight="7.0dip">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="84.0dip">

        <ImageView
            android:id="@+id/item_phone_only_img"
            android:layout_width="fill_parent"
            android:layout_height="84.0dip"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center|left"
            android:background="@color/red_fc"
            android:gravity="center"
            android:paddingLeft="3.0dip"
            android:paddingRight="3.0dip"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="10.0dip"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/sellout_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_product_sellout"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/item_phone_only_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.0dip"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:textColor="@color/black_25"
        android:textSize="12.0dip" />

    <TextView
        android:id="@+id/item_phone_only_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0dip"
        android:text="Info"
        android:textColor="@color/red_fc"
        android:textSize="13.0dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_jiuxian_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4.0dip"
        android:text="123"
        android:textColor="@color/gray_99"
        android:textSize="10.0dip" />
</LinearLayout>