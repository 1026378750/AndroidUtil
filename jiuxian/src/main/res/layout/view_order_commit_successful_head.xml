<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48.0dip"
        android:layout_marginLeft="54.0dip"
        android:layout_marginTop="45.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_order_pay_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24.0dip"
            android:src="@drawable/ic_order_pay_success" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/gray_33"
                android:textSize="14.0dip" />

            <TextView
                android:id="@+id/pay_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.0dip"
                android:singleLine="true"
                android:textColor="@color/gray_33"
                android:textSize="14.0dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_commit_check_order"
            android:layout_width="0.0dip"
            android:layout_height="38.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/order_commit_check_order"
            android:textColor="@color/gray_33"
            android:textSize="14.0dip"/>

        <View
            android:layout_width="10.0dip"
            android:layout_height="1.0dip" />

        <TextView
            android:id="@+id/order_commit_goto_home_page"
            android:layout_width="0.0dip"
            android:layout_height="38.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/order_commit_goto_home_page"
            android:textColor="@color/red_fc"
            android:textSize="14.0dip"/>
    </LinearLayout>
</LinearLayout>