<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/capture_wine_tip_dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#bb000000">

    <LinearLayout
        android:id="@+id/capture_guide_page_bg_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86.0dip"
        android:layout_marginRight="26.0dip"
        android:layout_marginTop="66.0dip"
        android:background="@drawable/capture_guide_page_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="50.0dip">

        <ImageView
            android:id="@+id/capture_wine_tip_character_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="108.0dip"
            android:contentDescription="@null"
            android:src="@drawable/capture_wine_tip_character_one" />

        <ImageView
            android:id="@+id/capture_wine_tip_character_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22.0dip"
            android:contentDescription="@null"
            android:src="@drawable/capture_wine_tip_character_two" />

        <LinearLayout
            android:id="@+id/ll_notice_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22.0dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_notice_one" />

            <View
                android:layout_width="48.0dip"
                android:layout_height="1.0dip" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_notice_two" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="82.0dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/capture_wine_known_btn_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/capture_wine_known_btn_bg" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_show_tip_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35.0dip"
        android:src="@drawable/capture_wine_show_tip_character" />

    <ImageView
        android:id="@+id/cover_wine_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:contentDescription="@null"
        android:src="@drawable/capture_wine_tit_btn_icon" />
</RelativeLayout>