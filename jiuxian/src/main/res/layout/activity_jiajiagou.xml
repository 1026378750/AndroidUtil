<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/comm_ui_bg"
    android:orientation="vertical">

    <include layout="@layout/standard_title" />

    <TextView
        android:id="@+id/jiajiagou_info"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:background="@drawable/bg_square_solid_h_yellow"
        android:drawableLeft="@drawable/icon_hint"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:singleLine="true"
        android:text="@string/jiajiagou_info"
        android:textColor="@color/red_fc"
        android:textSize="13dp"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/jiajiagou_listview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="@color/white"
        android:cacheColorHint="@color/transparent"
        android:divider="@null"
        android:listSelector="@drawable/selector_listview_normal"
        android:scrollbars="none" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:gravity="center|right"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_bottom_column" />

        <TextView
            android:id="@+id/ok"
            android:layout_width="96dp"
            android:layout_height="fill_parent"
            android:background="@drawable/selector_button_square_red"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>
</LinearLayout>