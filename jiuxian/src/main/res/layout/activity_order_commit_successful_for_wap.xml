<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ccb_beike_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/red_home_title"
        app:isTopBar="true"
        app:left_button_image="@drawable/icon_title_back_transparent"
        app:left_button_size="20px"
        app:show_left_button="true"
        app:title_text="标题"
        app:title_textColor="@color/color_ffffff"
        app:title_textSize="@dimen/size_18px" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_order_commit_success"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="20.0dip"
                android:paddingRight="170.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginTop="13.0dip"
                    android:text="@string/order_commit_successful_info_new"
                    android:textColor="@color/white"
                    android:textSize="14.0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24.0dip"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="12.0dip"
                android:paddingRight="12.0dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_commit_successful_order_number"
                        android:textColor="@color/gray_66"
                        android:textSize="14.0dip" />

                    <TextView
                        android:id="@+id/order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_25"
                        android:textSize="14.0dip" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/comm_bg_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_commit_successful_order_pay"
                        android:textColor="@color/gray_66"
                        android:textSize="14.0dip" />

                    <TextView
                        android:id="@+id/order_pay_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_25"
                        android:textSize="14.0dip" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/comm_bg_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_commit_successful_order_pay_type"
                        android:textColor="@color/gray_66"
                        android:textSize="14.0dip" />

                    <TextView
                        android:id="@+id/order_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_25"
                        android:textSize="14.0dip" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_marginTop="10.0dip"
                android:drawableLeft="@drawable/icon_hint"
                android:drawablePadding="3.0dip"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/order_commit_successful_notice_title"
                android:textColor="@color/red_fc"
                android:textSize="14.0dip"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_notification_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_square_solid_h_yellow"
                android:drawablePadding="8.0dip"
                android:gravity="center_vertical"
                android:minHeight="30.0dip"
                android:paddingBottom="6.0dip"
                android:paddingLeft="12.0dip"
                android:paddingRight="12.0dip"
                android:paddingTop="6.0dip"
                android:textColor="@color/red_fc"
                android:textSize="14.0dip"
                android:visibility="gone" />

            <TextView
                android:id="@+id/order_success_notice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_marginTop="6.0dip"
                android:autoLink="phone"
                android:lineSpacingExtra="3.0dip"
                android:text="@string/order_commit_successful_notice"
                android:textColor="@color/black_25"
                android:textSize="14.0dip"
                android:visibility="gone" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25.0dip"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goto_club"
            android:layout_width="0.0dip"
            android:layout_height="38.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/selector_button_round_red"
            android:gravity="center"
            android:text="@string/order_commit_goto_club"
            android:textColor="@color/white"
            android:textSize="14.0dip" />
    </LinearLayout>
</LinearLayout>