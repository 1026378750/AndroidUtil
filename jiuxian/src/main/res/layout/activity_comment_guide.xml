<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black_trans_20"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="36.0dip">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_comment_guide_gold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.0dip"
        android:src="@drawable/icon_comment_guide_gold_info" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23.0dip"
        android:src="@drawable/icon_comment_guide_arrow" />

    <ImageView
        android:id="@+id/guide_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginTop="10.0dip"
        android:src="@drawable/icon_comment_guide1" />

    <ImageView
        android:id="@+id/guide_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69.0dip"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:src="@drawable/icon_comment_guide1_button" />
</LinearLayout>