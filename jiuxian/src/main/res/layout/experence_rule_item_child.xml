<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip">

    <View
        android:id="@+id/left"
        android:layout_width="3.0dip"
        android:layout_height="7.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/community_personal_record_left" />

    <TextView
        android:id="@+id/experence_rule_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_toLeftOf="@+id/experence_rule_value"
        android:layout_toRightOf="@+id/left"
        android:paddingBottom="4.0dip"
        android:paddingTop="5.0dip"
        android:textColor="@color/gray_66"
        android:textSize="14.0sp" />

    <TextView
        android:id="@+id/experence_rule_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawablePadding="4.0dip"
        android:drawableRight="@drawable/icon_community_point_add"
        android:paddingBottom="4.0dip"
        android:paddingTop="5.0dip"
        android:textColor="@color/red_fc"
        android:textSize="14.0sp" />

    <TextView
        android:id="@+id/experence_rule_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="4.0dip"
        android:paddingTop="5.0dip"
        android:textColor="@color/gray_66"
        android:textSize="14.0sp" />
</RelativeLayout>