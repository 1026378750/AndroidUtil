<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="24.0dip"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/number_minus"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:background="@drawable/bg_number_controller_left"
        android:scaleType="center"
        android:src="@drawable/selector_number_minus" />

    <TextView
        android:id="@+id/number_info"
        android:layout_width="36.0dip"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_number_controller_middle"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/number_info_color"
        android:textSize="14.0dip" />

    <ImageView
        android:id="@+id/number_plus"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:background="@drawable/bg_number_controller_right"
        android:scaleType="center"
        android:src="@drawable/selector_number_plus" />
</LinearLayout>