<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ccb_beike_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/red_home_title"
        app:isTopBar="true"
        app:left_button_image="@drawable/icon_title_back_transparent"
        app:left_button_size="20px"
        app:right_button_text="@string/clean"
        app:right_button_textColor="@color/color_ffffff"
        app:right_button_textSize="15px"
        app:show_right_button="true"
        app:show_left_button="true"
        app:title_text="@string/profile_detail"
        app:title_textColor="@color/color_ffffff"
        app:title_textSize="@dimen/size_18px" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="180.0dip"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="115.0dip"
            android:layout_height="115.0dip"
            android:layout_marginTop="20.0dip"
            android:src="@drawable/head_other" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:textColor="@color/text_gray1"
            android:textSize="16.0sp" />
    </LinearLayout>

    <!--<com.tencent.qcloud.ui.LineControllerView
        android:id="@+id/id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        app:name="@string/profile_id" />

    <com.tencent.qcloud.ui.LineControllerView
        android:id="@+id/remark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:canNav="true"
        app:name="@string/profile_remark" />

    <com.tencent.qcloud.ui.LineControllerView
        android:id="@+id/blackList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:isSwitch="true"
        app:name="@string/profile_black" />

    <com.tencent.qcloud.ui.LineControllerView
        android:id="@+id/group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        app:canNav="true"
        app:isBottom="true"
        app:name="@string/profile_now_group" />-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:orientation="horizontal"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip">

        <TextView
            android:id="@+id/btnDel"
            android:layout_width="0.0dip"
            android:layout_height="40.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/bg_negative_btn"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/profile_del"
            android:textColor="@color/text_btn"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/btnChat"
            android:layout_width="0.0dip"
            android:layout_height="40.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/bg_positive_btn"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/profile_chat"
            android:textColor="@color/text_btn"
            android:textSize="18.0sp" />
    </LinearLayout>
</LinearLayout>