<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/capture_Lay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="44.0dip"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingRight="12.0dip">

    <ImageView
        android:id="@+id/capture_img"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:scaleType="centerInside"
        android:src="@drawable/default_img" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="110.0dip"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/capture_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4.0dip"
                android:textColor="@color/white"
                android:textSize="16.0dip" />

            <TextView
                android:id="@+id/capture_title_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/capturewinecamera_list"
                android:textColor="@color/white"
                android:textSize="12.0dip"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/capture_describe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12.0dip" />
    </LinearLayout>
</LinearLayout>