<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110.0dip"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/menu_item"
        android:layout_width="fill_parent"
        android:layout_height="42.0dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_img"
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12.0dip" />

        <TextView
            android:id="@+id/menu_title"
            style="@style/product_detail_popup_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="22.0dip"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/menu_tip"
            android:layout_width="7.0dip"
            android:layout_height="7.0dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_product_detail_msg_more"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>