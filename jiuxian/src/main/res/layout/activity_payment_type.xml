<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ccb_beike_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/red_home_title"
        app:isTopBar="true"
        app:left_button_image="@drawable/icon_title_back_transparent"
        app:left_button_size="20px"
        app:show_left_button="true"
        app:title_text="标题"
        app:title_textColor="@color/color_ffffff"
        app:title_textSize="@dimen/size_18px" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="14.0dip"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.0dip"
            android:text="@string/payment_info_pay"
            android:textColor="@color/black_25"
            android:textSize="14.0dip" />

        <RadioGroup
            android:id="@+id/payment_info_pay_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/payment_info_pay_online"
                style="@style/payment_info_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:paddingTop="8.0dip"
                android:text="@string/payment_info_pay_online"
                android:textColor="@color/payment_checkbox_color"
                android:textSize="12.0dip" />

            <RadioButton
                android:id="@+id/payment_info_pay_offline"
                style="@style/payment_info_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44.0dip"
                android:gravity="center"
                android:paddingBottom="8.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:paddingTop="8.0dip"
                android:text="@string/payment_info_pay_offline"
                android:textColor="@color/payment_checkbox_color"
                android:textSize="12.0dip"
                android:visibility="gone" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="14.0dip"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.0dip"
            android:text="@string/payment_info_distribution"
            android:textColor="@color/black_25"
            android:textSize="14.0dip" />

        <RadioGroup
            android:id="@+id/payment_info_distribution_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/payment_info_distribution_detail"
                style="@style/payment_info_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="8.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:paddingTop="8.0dip"
                android:text="@string/payment_info_distribution_detail"
                android:textColor="@color/payment_checkbox_color"
                android:textSize="12.0dip" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/payment_info_finish"
        style="@style/button_round_red"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_marginTop="24.0dip"
        android:text="@string/ok" />
</LinearLayout>