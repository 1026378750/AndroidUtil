<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_random"
    android:gravity="bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/icon_macth_address_title"
            android:drawablePadding="6.0dip"
            android:text="@string/order_match_address_choose_title"
            android:textColor="@color/gray_99"
            android:textSize="15.0dip" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/gray_e8" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="346.0dip"
        android:background="@color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/address_user"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="0.0dip"
            android:listSelector="@color/transparent"
            android:scrollbars="none" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/gray_cc" />

            <TextView
                android:id="@+id/cancel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/selector_button_square_red_fa"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/cancel"
                android:textColor="@color/black_25"
                android:textSize="16.0dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/sure"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/selector_button_square_red"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/order_match_address_sure"
            android:textColor="@color/white"
            android:textSize="16.0dip" />
    </LinearLayout>
</LinearLayout>