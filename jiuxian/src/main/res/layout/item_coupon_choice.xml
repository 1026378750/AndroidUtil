<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/usercoupon_item_background"
        android:layout_width="fill_parent"
        android:layout_height="115.0dip"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:background="@drawable/bg_coupon_grey"
        android:paddingRight="14.0dip">

        <TextView
            android:id="@+id/usercoupon_item_scope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:background="@drawable/bg_couponscope_bluedark"
            android:gravity="center"
            android:text="@string/user_coupon_item_type_all"
            android:textColor="@android:color/white"
            android:textSize="8.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox"
                style="@style/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.0dip" />

            <TextView
                android:id="@+id/tv_RMB"
                android:layout_width="wrap_content"
                android:layout_height="42.0dip"
                android:layout_marginLeft="6.0dip"
                android:gravity="bottom"
                android:text="Â¥"
                android:textColor="@color/coupon_blue_dark"
                android:textSize="20.0dip" />

            <TextView
                android:id="@+id/usercoupon_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_toRightOf="@+id/tv_RMB"
                android:text="100"
                android:textColor="@color/coupon_blue_dark"
                android:textSize="48.0dip" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24.0dip"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/usercoupon_item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corners_mycoupon_red_bg"
                    android:paddingBottom="1.0dip"
                    android:paddingLeft="3.0dip"
                    android:paddingRight="3.0dip"
                    android:paddingTop="1.0dip"
                    android:text="@string/user_coupon_item_type_discount_satisfy"
                    android:textColor="@android:color/white"
                    android:textSize="9.0dip" />

                <TextView
                    android:id="@+id/usercoupon_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:lines="2"
                    android:maxLines="2"
                    android:textColor="@color/gray_66"
                    android:textSize="13.0dip" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/usercoupon_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center|right"
            android:layout_marginBottom="4.0dip"
            android:text="2015.08.17-2015.08.18"
            android:textColor="@color/gray_99"
            android:textSize="12.0dip" />

        <ImageView
            android:id="@+id/usercoupon_item_tag"
            android:layout_width="78.0dip"
            android:layout_height="78.0dip"
            android:layout_gravity="center|right"
            android:contentDescription="@null" />
    </FrameLayout>
</FrameLayout>