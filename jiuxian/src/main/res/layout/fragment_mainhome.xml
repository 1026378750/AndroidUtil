<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color">

    <com.zxin.zxinlib.view.RefreshCommonView
        android:id="@+id/rcv_cate"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:bottonViewText="我是有底线的~~~"
        app:headerResource="@layout/main_child"
        app:isWaterfall="true"
        app:noneText="暂无商品数据~"
        app:row_num="2"
        app:vessel_type="RecyclerView" />

    <RelativeLayout
        android:id="@+id/ll_mainhome_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_main_color">

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_home_scan" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_scan"
            android:layout_alignTop="@+id/iv_scan"
            android:layout_margin="8dp"
            android:layout_toEndOf="@+id/iv_scan"
            android:layout_toStartOf="@+id/message_prompt_icon"
            android:background="@drawable/corners_trans_bg"
            android:drawableLeft="@drawable/icon_jiuxian_search"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/search_goods"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/message_prompt_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_scan"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/iv_scan"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/message_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_home_capture_wine_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="43dp"
        android:background="@drawable/capture_bubble"
        android:paddingBottom="5dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_home_capture_wine_bubble_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/wiki_main_home_bubble"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/main_home_capture_wine_bubble_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/capture_bubble_close" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_back_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/icon_back_to_top" />

    <ImageView
        android:id="@+id/iv_circleactinfo"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_viewpager"
        android:visibility="gone" />
</RelativeLayout>