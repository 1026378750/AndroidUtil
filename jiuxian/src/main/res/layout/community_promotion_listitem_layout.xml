<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/comm_ui_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="160.0dip"
        android:layout_gravity="center_horizontal"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/promotion_img"
            android:layout_width="fill_parent"
            android:layout_height="160.0dip"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter" />

        <View
            android:id="@+id/half_transparent"
            android:layout_width="fill_parent"
            android:layout_height="198.0dip"
            android:layout_centerHorizontal="true"
            android:background="#90000000"
            android:visibility="gone" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="198.0dip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_round_promotion_listitem_up" />

        <RelativeLayout
            android:id="@+id/promotion_old"
            android:layout_width="wrap_content"
            android:layout_height="160.0dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:scaleType="center"
                android:src="@drawable/promotion_old" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="38.0dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_round_promotion_listitem_bottom"
        android:orientation="horizontal"
        android:paddingRight="10.0dip">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/promotion_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:drawableLeft="@drawable/community_topic_title_left_icon"
                android:drawablePadding="12.0dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="200.0dip"
                android:textColor="@color/textview_black"
                android:textSize="14.0sp" />

            <ImageView
                android:id="@+id/promotion_new"
                android:layout_width="20.0dip"
                android:layout_height="10.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:src="@drawable/promotion_list_new"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginLeft="20.0dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:maxLines="1"
                android:text="@string/community_promotion_popular"
                android:textColor="@color/gray_99"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/promotion_popular_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_99"
                android:textSize="12.0sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>