<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_titlebar"
    android:layout_width="fill_parent"
    android:layout_height="48.0dip"
    android:background="@color/button_gray"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/titlebar_iv_left"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_title_back_bg"
        android:contentDescription="@null"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <TextView
        android:id="@+id/titlebar_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip"
        android:textColor="@color/textview_black"
        android:textSize="18.0dip"
        android:visibility="gone" />

    <TextView
        android:id="@+id/titlebar_tv"
        style="@style/TextViewTitle"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxWidth="224.0dip" />

    <ImageView
        android:id="@+id/titlebar_iv_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_title_back_bg"
        android:contentDescription="@null"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titlebar_tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="10.0dip"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/textview_gray"
                android:textSize="14.0dip"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/titlebar_tv_right_alertcount"
            style="@style/message_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right|top"
            android:layout_marginTop="5.0dip"
            android:gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_alignParentBottom="true"
        android:background="@color/comm_bg_line" />
</RelativeLayout>