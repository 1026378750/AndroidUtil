<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="36.0dip"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/number_minus"
        android:layout_width="36.0dip"
        android:layout_height="36.0dip"
        android:scaleType="center"
        android:src="@drawable/selector_number_minus" />

    <EditText
        android:id="@+id/number_info"
        android:layout_width="100.0dip"
        android:layout_height="24.0dip"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:background="@drawable/bg_dialog_number_controller_middle"
        android:gravity="center"
        android:inputType="number"
        android:text="1"
        android:textColor="@color/gray_66"
        android:textSize="14.0dip" />

    <ImageView
        android:id="@+id/number_plus"
        android:layout_width="36.0dip"
        android:layout_height="36.0dip"
        android:scaleType="center"
        android:src="@drawable/selector_number_plus" />
</LinearLayout>