<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/head_layout"
        android:layout_width="fill_parent"
        android:layout_height="144.0dip"
        android:background="@drawable/member_channel_header_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/head_img_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:layout_marginTop="50.0dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="58.0dip"
                android:layout_height="58.0dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/member_head_pic_bg"
                android:gravity="center">

                <ImageView
                    android:id="@+id/head_picture"
                    android:layout_width="54.0dip"
                    android:layout_height="54.0dip"
                    android:src="@drawable/user_head" />
            </LinearLayout>

            <TextView
                android:id="@+id/member_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-10.0dip"
                android:background="@drawable/member_title_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10.0dip" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1.0"
            android:gravity="bottom">

            <LinearLayout
                android:id="@+id/head_gold_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="20.0dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7.0dip"
                    android:text="@string/member_head_gold_title"
                    android:textColor="@color/white"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@+id/coin_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#ff4c90c5"
                    android:shadowDy="2.0"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="22.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4.0dip"
                    android:shadowColor="#ff4c90c5"
                    android:shadowDy="2.0"
                    android:text="@string/member_head_gold_unit"
                    android:textColor="@color/white"
                    android:textSize="13.0sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/head_sign_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/head_gold_layout"
                android:layout_marginBottom="28.0dip"
                android:layout_marginRight="18.0dip"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/head_sign_day_one_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/member_no_sign_1" />

                    <View
                        android:id="@+id/head_sign_day_one_line"
                        android:layout_width="0.0dip"
                        android:layout_height="2.0dip"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.0"
                        android:background="@color/white_trans_25" />

                    <ImageView
                        android:id="@+id/head_sign_day_two_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/member_no_sign_2" />

                    <View
                        android:id="@+id/head_sign_day_two_line"
                        android:layout_width="0.0dip"
                        android:layout_height="2.0dip"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.0"
                        android:background="@color/white_trans_25" />

                    <ImageView
                        android:id="@+id/head_sign_day_three_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/member_no_sign_3" />

                    <View
                        android:id="@+id/head_sign_day_three_line"
                        android:layout_width="0.0dip"
                        android:layout_height="2.0dip"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.0"
                        android:background="@color/white_trans_25" />

                    <ImageView
                        android:id="@+id/head_sign_day_four_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/member_no_sign_4" />

                    <View
                        android:id="@+id/head_sign_day_four_line"
                        android:layout_width="0.0dip"
                        android:layout_height="2.0dip"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.0"
                        android:background="@color/white_trans_25" />

                    <ImageView
                        android:id="@+id/head_sign_day_five_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/member_no_sign_5" />

                    <View
                        android:id="@+id/head_sign_day_five_line"
                        android:layout_width="0.0dip"
                        android:layout_height="2.0dip"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.0"
                        android:background="@color/white_trans_25" />

                    <ImageView
                        android:id="@+id/head_sign_day_six_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/member_no_sign_6" />

                    <View
                        android:id="@+id/head_sign_day_six_line"
                        android:layout_width="0.0dip"
                        android:layout_height="2.0dip"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.0"
                        android:background="@color/white_trans_25" />

                    <ImageView
                        android:id="@+id/head_sign_day_seven_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/member_no_sign_7" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_signed_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/member_sign_1"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_signed_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/member_sign_2"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_signed_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/member_sign_3"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_signed_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/member_sign_4"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_signed_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/member_sign_5"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_signed_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/member_sign_6"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_signed_seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/member_sign_7"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_signed_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/member_sign_today"
                    android:visibility="invisible" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/head_sign_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/head_sign_layout"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="-10.0dip"
                android:layout_marginRight="15.0dip"
                android:src="@drawable/lottery_gift_icon" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/head_sign_in_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15.0dip"
            android:layout_marginRight="15.0dip"
            android:background="@drawable/member_sign_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5.0dip"
            android:textColor="@color/gray_66">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/member_head_sign"
                android:textColor="@color/red_fa_18"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/member_head_sign_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/member_head_no_sign"
                android:textColor="@color/red_fa_18"
                android:textSize="11.0sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>