<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/comm_ui_bg"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/banner_info"
        android:layout_width="fill_parent"
        android:layout_height="98.0dip">

        <android.support.v4.view.ViewPager
            android:id="@+id/banner_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <LinearLayout
            android:id="@+id/banner_page_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center|right"
            android:layout_marginBottom="6.0dip"
            android:layout_marginRight="12.0dip"
            android:orientation="horizontal" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/recommend_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="3.0dip"
                android:layout_height="12.0dip"
                android:background="@color/red_fb" />

            <TextView
                android:id="@+id/recommend_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:gravity="center_vertical"
                android:textColor="@color/black_25"
                android:textSize="15.0dip" />
        </LinearLayout>

       <!-- <com.jiuxian.client.widget.GalleryNotFling
            android:id="@+id/recommend_content"
            android:layout_width="fill_parent"
            android:layout_height="168.0dip"
            android:listSelector="@drawable/selector_listview_normal"
            android:scrollbars="none"
            android:spacing="12.0dip" />-->

        <TextView
            android:id="@+id/recommend_page_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="4.0dip"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="4.0dip"
            android:background="@drawable/icon_phone_vip_recommend_info"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="9.0dip"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>