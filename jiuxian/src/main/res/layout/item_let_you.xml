<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mCollectItemLinear"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/mLetYouItemSignLL"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingLeft="10.0dip"
                android:paddingRight="5.0dip">

                <ImageView
                    android:id="@+id/mLetYouItemSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_check_false" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="120.0dip"
                android:layout_height="120.0dip"
                android:layout_marginBottom="1.0dip">

                <ImageView
                    android:id="@+id/mLytImage"
                    android:layout_width="120.0dip"
                    android:layout_height="120.0dip"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/mLytStockText"
                    style="@style/text_understock_style"
                    android:visibility="gone" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:paddingLeft="14.0dip"
                    android:paddingRight="14.0dip"
                    android:paddingTop="14.0dip">

                    <TextView
                        android:id="@+id/mLytNameText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:maxLines="2"
                        android:textColor="@color/black_25"
                        android:textSize="14.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:paddingLeft="14.0dip"
                    android:paddingRight="14.0dip">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mLytPriceText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1.0"
                            android:textColor="@color/red_fc" />
<!--
                        <com.jiuxian.client.widget.NumberController
                            android:id="@+id/item_letyou_number_controller"
                            android:layout_width="wrap_content"
                            android:layout_height="30.0dip"
                            android:layout_gravity="right"
                            android:layout_weight="0.0"
                            android:padding="0.0dip" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10.0dip"
                            android:layout_marginTop="5.0dip"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/item_letyou_oneself"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="10.0dip"
                                android:gravity="center"
                                android:src="@drawable/icon_jiuxian_own" />

                            <TextView
                                android:id="@+id/item_letyou_praise"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="12.0dip"
                                android:gravity="center"
                                android:textColor="@color/gray_99"
                                android:textSize="11.0dip" />

                            <TextView
                                android:id="@+id/item_letyou_comment"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:textColor="@color/gray_99"
                                android:textSize="11.0dip" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="14.0dip"
                    android:background="@color/comm_bg_line" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>