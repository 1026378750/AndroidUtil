<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:gravity="center"
        android:paddingLeft="42.0dip"
        android:paddingRight="42.0dip"
        android:text="@string/cart_number_edit"
        android:textColor="@color/black_25"
        android:textSize="14.0dip" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="16.0dip"
        android:background="@color/comm_bg_line" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip">

        <!--<com.jiuxian.client.widget.DialogNumberController
            android:id="@+id/numbercontroller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />-->
    </FrameLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="16.0dip"
        android:background="@color/comm_bg_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip">

        <TextView
            android:id="@+id/left_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/gray_66"
            android:textSize="14.0dip" />

        <ImageView
            android:id="@+id/button_line"
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:background="@color/comm_bg_line" />

        <TextView
            android:id="@+id/right_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/finish"
            android:textColor="@color/red_fc"
            android:textSize="14.0dip" />
    </LinearLayout>
</LinearLayout>