<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.zxin.root.view.CommonCrosswiseBar
        android:id="@+id/ccb_jiuxian_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/color_ffffff"
        app:isTopBar="true"
        app:left_button_image="@mipmap/ic_black_left_arrow"
        app:show_left_button="true"
        app:title_text="@string/about_us"
        app:title_textColor="@color/color_333333"
        app:title_textSize="@dimen/size_18px"
        />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/topview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="75.0dip"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_two_dimension_code" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.0dip"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_12"
                        android:padding="1.0dip"
                        android:text="@string/versions"
                        android:textColor="@color/gray_99" />

                    <TextView
                        android:id="@+id/mVersionsText"
                        style="@style/textview_12"
                        android:padding="1.0dip"
                        android:text="6.0"
                        android:textColor="@color/gray_99" />
                </LinearLayout>

                <TextView
                    style="@style/textview_12"
                    android:layout_marginTop="20.0dip"
                    android:gravity="center"
                    android:maxEms="14"
                    android:singleLine="false"
                    android:text="@string/invite_friend_buy_wine"
                    android:textColor="@color/gray_66" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginLeft="12.0dip"
                    android:layout_marginRight="12.0dip"
                    android:layout_marginTop="48.0dip"
                    android:background="@color/gray_cc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="12.0dip"
                    android:layout_marginTop="18.0dip"
                    android:drawableLeft="@drawable/alert_icon"
                    android:drawablePadding="4.0dip"
                    android:text="@string/kindly_reminder"
                    android:textColor="@color/black_25"
                    android:textSize="13.0dip" />
            </LinearLayout>

            <TextView
                android:id="@+id/licence_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28.0dip"
                android:layout_marginRight="28.0dip"
                android:layout_marginTop="7.0dip"
                android:lineSpacingExtra="5.0dip"
                android:textColor="@color/gray_66"
                android:textColorHighlight="@color/comm_ui_bg"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/licence_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20.0dip"
                android:layout_marginLeft="28.0dip"
                android:layout_marginRight="28.0dip"
                android:layout_marginTop="15.0dip"
                android:lineSpacingExtra="5.0dip"
                android:textColor="@color/gray_66"
                android:textColorHighlight="@color/comm_ui_bg"
                android:textSize="12.0sp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>