<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mListContentRl"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_listview_normal"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="115.0dip"
            android:layout_height="115.0dip">

            <ImageView
                android:id="@+id/mGoodsImg"
                android:layout_width="115.0dip"
                android:layout_height="115.0dip"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/text_whp"
                style="@style/text_understock_style"
                android:layout_height="20.0dip"
                android:alpha="0.7"
                android:background="@color/black_25"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/mPlayImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="18.0dip"
                android:src="@drawable/icon_play_list"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="8.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="12.0dip"
            android:paddingTop="10.0dip">

            <TextView
                android:id="@+id/mGoodsNameTV"
                style="@style/textview_14"
                android:gravity="center_vertical"
                android:maxEms="17"
                android:maxLines="2"
                android:singleLine="false" />

            <LinearLayout
                android:id="@+id/mActiContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textStoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_store_pro_list"
                    android:drawablePadding="5.0dip"
                    android:ellipsize="end"
                    android:paddingBottom="2.0dip"
                    android:paddingRight="7.0dip"
                    android:paddingTop="2.0dip"
                    android:singleLine="true"
                    android:textColor="@color/gray_99"
                    android:textSize="12.0dip"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/mPriceActiLL"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mGoodsPriceTV"
                        style="@style/textview_14"
                        android:maxLines="1"
                        android:textColor="@color/red_fc" />

                    <LinearLayout
                        android:id="@+id/mClubPriceLL"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="6.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mClubPriceTV"
                            style="@style/textview_12"
                            android:maxLines="1"
                            android:textSize="11.0dip" />

                        <ImageView
                            android:id="@+id/mClubImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3.0dip"
                            android:src="@drawable/icon_club"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mEvaContentLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageJiuxianOwn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="4.0dip"
                        android:src="@drawable/icon_jiuxian_own"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imageauthenticity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5.0dip"
                        android:src="@drawable/icon_test_authenticity"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/mGoodsEvalu"
                        style="@style/textview_12"
                        android:maxLines="1"
                        android:paddingRight="5.0dip"
                        android:textColor="@color/gray_66" />

                    <TextView
                        android:id="@+id/mGoodsCountTv"
                        style="@style/textview_12"
                        android:maxLines="1"
                        android:textColor="@color/gray_66" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/text_divider_normal"
        android:layout_marginLeft="125.0dip" />
</LinearLayout>