<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.zxin.zxinlib.view.CommonCrosswiseBar
        android:id="@+id/ccb_beike_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_background="@color/red_home_title"
        app:isTopBar="true"
        app:left_button_image="@drawable/icon_title_back_transparent"
        app:left_button_size="20px"
        app:show_left_button="true"
        app:title_text="标题"
        app:title_textColor="@color/color_ffffff"
        app:title_textSize="@dimen/size_18px"
        />

    <RadioGroup
        android:id="@+id/coupon_tabs"
        android:layout_width="fill_parent"
        android:layout_height="38.0dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/coupon_tab_enable"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:text="@string/coupon_choice_enable_empty"
            android:textColor="@color/order_tab_item_selector"
            android:textSize="13.0dip" />

        <RadioButton
            android:id="@+id/coupon_tab_disable"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:button="@null"
            android:gravity="center"
            android:text="@string/coupon_choice_disable_empty"
            android:textColor="@color/order_tab_item_selector"
            android:textSize="13.0dip" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/coupon_content"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" />

    <TextView
        android:id="@+id/ok"
        style="@style/button_round_red"
        android:layout_marginBottom="24.0dip"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_marginTop="12.0dip"
        android:text="@string/ok" />
</LinearLayout>