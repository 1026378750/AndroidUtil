<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff">

  <!--  <com.jiuxian.client.widget.XListView.swipe.SwipeLayout
        android:id="@+id/swipe"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">-->

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red_fc"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/delete"
                android:layout_width="52.0dip"
                android:layout_height="62.0dip"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/community_circle_item_swipe_delete"
                android:textColor="@color/white"
                android:textSize="14.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="14.0dip"
            android:paddingRight="12.0dip">

            <View
                android:id="@+id/comment_list_divider"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginLeft="40.0dip"
                android:background="@color/comm_bg_line" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.0dip">

                <ImageView
                    android:id="@+id/comment_userheader"
                    android:layout_width="28.0dip"
                    android:layout_height="28.0dip"
                    android:src="@drawable/community_default_head" />

                <ImageView
                    android:id="@+id/community_header_role"
                    android:layout_width="12.0dip"
                    android:layout_height="12.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="18.0dip"
                    android:layout_marginTop="18.0dip"
                    android:src="@drawable/community_moderator_small" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12.0dip"
                    android:layout_toRightOf="@+id/comment_userheader">

                    <TextView
                        android:id="@+id/comment_time"
                        style="@style/textview_size12_gray99"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />

                    <TextView
                        android:id="@+id/comment_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/black_25"
                        android:textSize="14.0sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/comment_userlevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_toRightOf="@+id/comment_username" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4.0dip"
                android:layout_marginLeft="40.0dip"
                android:layout_marginTop="7.0dip"
                android:lineSpacingExtra="8.0dip"
                android:textColor="@color/black_25"
                android:textSize="14.0sp" />
        </LinearLayout>
    <!--</com.jiuxian.client.widget.XListView.swipe.SwipeLayout>-->
</FrameLayout>