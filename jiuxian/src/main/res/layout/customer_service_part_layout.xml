<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_service_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/contact_service_layout"
        android:layout_width="0.0dip"
        android:layout_height="46.0dip"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contact_service"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/jiuxian_customer_service_icon"
            android:drawablePadding="5.0dip"
            android:gravity="center"
            android:text="@string/customer_service_tel_characters"
            android:textColor="@color/gray_66"
            android:textSize="14.0dip" />
    </LinearLayout>

    <View
        android:layout_width="1.0px"
        android:layout_height="26.0dip"
        android:background="@color/gray_d9" />

    <LinearLayout
        android:id="@+id/contact_phone_layout"
        android:layout_width="0.0dip"
        android:layout_height="46.0dip"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/contact_seller_phone"
            android:layout_width="wrap_content"
            android:layout_height="46.0dip"
            android:drawableLeft="@drawable/seller_phone"
            android:drawablePadding="5.0dip"
            android:gravity="center"
            android:text="@string/jiuxian_tel_characters"
            android:textColor="@color/gray_66"
            android:textSize="14.0dip" />
    </LinearLayout>
</LinearLayout>